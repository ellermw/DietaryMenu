<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hospital.dietary"
    android:versionCode="25"
    android:versionName="0.0.25" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="34" />

    <permission
        android:name="com.hospital.dietary.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.hospital.dietary.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:debuggable="true"
        android:extractNativeLibs="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.AppCompat.Light" >

        <!-- Login Activity - Entry point -->
        <activity
            android:name="com.hospital.dietary.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Menu Activity - Primary navigation hub -->
        <activity
            android:name="com.hospital.dietary.MainMenuActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Meal Planning Activity - Core meal planning functionality -->
        <activity
            android:name="com.hospital.dietary.MealPlanningActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustResize" />

        <!-- Pending Orders Activity - View pending meal orders -->
        <activity
            android:name="com.hospital.dietary.PendingOrdersActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Retired Orders Activity - View completed orders -->
        <activity
            android:name="com.hospital.dietary.RetiredOrdersActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Account Management Activity - User account settings -->
        <activity
            android:name="com.hospital.dietary.AccountManagementActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustResize" />

        <!-- Password Change Activity -->
        <activity
            android:name="com.hospital.dietary.PasswordChangeActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.LoginActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustResize" />

        <!-- Patient Info Menu Activity - Patient information hub -->
        <activity
            android:name="com.hospital.dietary.PatientInfoMenuActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- New Patient Activity - Add new patients -->
        <activity
            android:name="com.hospital.dietary.NewPatientActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.PatientInfoMenuActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustResize" />

        <!-- Existing Patient Activity - View existing patients -->
        <activity
            android:name="com.hospital.dietary.ExistingPatientActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.PatientInfoMenuActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Patient Info Activity - Manage patient information -->
        <activity
            android:name="com.hospital.dietary.PatientInfoActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.PatientInfoMenuActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustResize" />

        <!-- Patient Detail Activity - Detailed patient view -->
        <activity
            android:name="com.hospital.dietary.PatientDetailActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.ExistingPatientActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Admin Menu Activity - Admin functions -->
        <activity
            android:name="com.hospital.dietary.AdminMenuActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Admin Activity - Comprehensive admin management -->
        <activity
            android:name="com.hospital.dietary.AdminActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- User Management Activity - Manage users (Admin only) -->
        <activity
            android:name="com.hospital.dietary.UserManagementActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.AdminActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Item Management Activity - Manage food items (Admin only) -->
        <activity
            android:name="com.hospital.dietary.ItemManagementActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.AdminActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- FIXED: New Default Menu Management Activity - Admin only -->
        <activity
            android:name="com.hospital.dietary.DefaultMenuManagementActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.AdminActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustResize" />

        <!-- View Orders Activity - View orders by date -->
        <activity
            android:name="com.hospital.dietary.ViewOrdersActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Main Activity - Original meal planning (keep for compatibility) -->
        <activity
            android:name="com.hospital.dietary.MainActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.MealPlanningActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustResize" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.hospital.dietary.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.profileinstaller.ProfileInstallerInitializer"
                android:value="androidx.startup" />
        </provider>

        <receiver
            android:name="androidx.profileinstaller.ProfileInstallReceiver"
            android:directBootAware="false"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.DUMP" >
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.INSTALL_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SKIP_FILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.SAVE_PROFILE" />
            </intent-filter>
            <intent-filter>
                <action android:name="androidx.profileinstaller.action.BENCHMARK_OPERATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>