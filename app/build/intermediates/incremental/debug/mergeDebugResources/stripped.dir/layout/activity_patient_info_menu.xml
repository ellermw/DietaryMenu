<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f9fa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¤ Patient Information"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#1e3a8a"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose how you'd like to manage patient information"
                android:textSize="16sp"
                android:textColor="#7f8c8d"
                android:gravity="center"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Patient Options Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patient Management"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="12dp" />

            <!-- New Patient Button -->
            <Button
                android:id="@+id/newPatientButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ‘¤  New Patient"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_rounded_green"
                android:layout_marginBottom="8dp" />

            <!-- Existing Patients Button -->
            <Button
                android:id="@+id/existingPatientsButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ‘¥  Existing Patients"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_rounded_blue"
                android:layout_marginBottom="0dp" />

        </LinearLayout>

        <!-- Quick Stats Section - Moved to bottom -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quick Stats"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/quickStatsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading statistics..."
                android:textSize="16sp"
                android:textColor="#34495e"
                android:lineSpacingMultiplier="1.3"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>