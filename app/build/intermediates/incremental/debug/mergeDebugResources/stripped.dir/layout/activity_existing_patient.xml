<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8f9fa">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Search and Filter Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="2dp">

        <!-- Search Input -->
        <EditText
            android:id="@+id/searchInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Search patients..."
            android:inputType="text"
            android:padding="12dp"
            android:background="@android:drawable/editbox_background"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp"
            android:layout_marginBottom="12dp" />

        <!-- Day Filter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Filter by day:"
                android:textSize="16sp"
                android:textColor="#2c3e50"
                android:layout_marginEnd="12dp" />

            <Spinner
                android:id="@+id/dayFilterSpinner"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@android:drawable/btn_dropdown" />

        </LinearLayout>

        <!-- Patient Count -->
        <TextView
            android:id="@+id/patientsCountText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Showing 0 of 0 patients"
            android:textSize="14sp"
            android:textColor="#7f8c8d"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    <!-- Bulk Operations Bar -->
    <LinearLayout
        android:id="@+id/bulkOperationsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ecf0f1"
        android:padding="12dp"
        android:visibility="gone"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/selectAllCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select All"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/printMenusButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Print Menus"
            android:textSize="12sp"
            android:background="#3498db"
            android:textColor="@android:color/white"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/deleteSelectedButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Delete Selected"
            android:textSize="12sp"
            android:background="#e74c3c"
            android:textColor="@android:color/white"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

    </LinearLayout>

    <!-- Patients List -->
    <ListView
        android:id="@+id/patientsListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#e0e0e0"
        android:dividerHeight="1dp"
        android:background="@android:color/white" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyStateContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No patients found"
            android:textSize="18sp"
            android:textColor="#7f8c8d"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/addPatientEmptyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add New Patient"
            android:textColor="@android:color/white"
            android:background="#27ae60"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />

    </LinearLayout>

</LinearLayout>