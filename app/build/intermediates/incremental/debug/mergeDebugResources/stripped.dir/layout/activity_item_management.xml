<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f9fa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Card -->
        <LinearLayout
            style="@style/HeaderCard">

            <TextView
                style="@style/AppTitle"
                android:text="🍽️ Item Management" />

            <TextView
                style="@style/WelcomeText"
                android:text="Manage food items and categories" />

        </LinearLayout>

        <!-- Category Filter Section -->
        <LinearLayout
            style="@style/CardSection">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <Spinner
                    android:id="@+id/categorySpinner"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@drawable/input_field_background"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/manageCategoriesButton"
                    style="@style/MainMenuButton.Purple"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="⚙️ Categories"
                    android:textSize="14sp"
                    android:paddingHorizontal="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/searchInput"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Search items..."
                    android:background="@drawable/input_field_background"
                    android:padding="12dp"
                    android:drawableStart="@android:drawable/ic_menu_search"
                    android:drawablePadding="8dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/addItemButton"
                    style="@style/MainMenuButton.Green"
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:text="➕ Add"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/itemsCountText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Items: 0"
                android:textSize="14sp"
                android:textColor="#7f8c8d" />

        </LinearLayout>

        <!-- Items List Section -->
        <LinearLayout
            style="@style/CardSection">

            <TextView
                style="@style/SectionTitle"
                android:text="Food Items" />

            <ListView
                android:id="@+id/itemsListView"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:divider="#E3E4E8"
                android:dividerHeight="1dp"
                android:background="@android:color/white" />

        </LinearLayout>

        <!-- Quick Actions Section -->
        <LinearLayout
            style="@style/CardSection">

            <TextView
                style="@style/SectionTitle"
                android:text="Quick Actions" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <Button
                    android:id="@+id/defaultMenuButton"
                    style="@style/MainMenuButton.Orange"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:text="📋 Default Menu"
                    android:textSize="14sp"
                    android:layout_marginEnd="6dp" />

                <Button
                    android:id="@+id/importItemsButton"
                    style="@style/MainMenuButton.Primary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="56dp"
                    android:text="📥 Import Items"
                    android:textSize="14sp"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

            <Button
                android:id="@+id/nutritionInfoButton"
                style="@style/MainMenuButton.Pink"
                android:text="📊 Nutrition Information"
                android:layout_marginBottom="0dp" />

        </LinearLayout>

        <!-- Navigation Section -->
        <LinearLayout
            style="@style/CardSection"
            android:layout_marginBottom="0dp">

            <Button
                android:id="@+id/backButton"
                style="@style/MainMenuButton.Gray"
                android:text="⬅️  Back to Main Menu"
                android:layout_marginBottom="0dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>