<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#f8fafc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Welcome Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="20dp"
            android:elevation="4dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🏥 Hospital Dietary Management"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome!"
                android:textSize="18sp"
                android:textColor="#7f8c8d"
                android:gravity="center" />

        </LinearLayout>

        <!-- Operations Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📋 Operations"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/patientInfoButton"
                style="@style/MainMenuButton.Primary"
                android:text="🏥 Patient Info" />

            <Button
                android:id="@+id/pendingOrdersButton"
                style="@style/MainMenuButton.Primary"
                android:text="⏳ Pending Orders" />

            <Button
                android:id="@+id/retiredOrdersButton"
                style="@style/MainMenuButton.Primary"
                android:text="✅ Retired Orders" />

        </LinearLayout>

        <!-- Documents Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📄 Documents"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/productionSheetsButton"
                    style="@style/MainMenuButton.SideBySide"
                    android:background="@drawable/button_primary"
                    android:text="📄 Production\nSheets" />

                <Button
                    android:id="@+id/stockSheetsButton"
                    style="@style/MainMenuButton.SideBySide"
                    android:background="@drawable/button_primary"
                    android:text="📊 Stock\nSheets" />

            </LinearLayout>

        </LinearLayout>

        <!-- Admin Tools Section (Visible only for admin users) -->
        <LinearLayout
            android:id="@+id/adminToolsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔧 Admin Tools"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="12dp" />

            <!-- All three admin buttons in vertical layout -->
            <Button
                android:id="@+id/userManagementButton"
                style="@style/MainMenuButton.Primary"
                android:text="👥 User Management" />

            <Button
                android:id="@+id/itemManagementButton"
                style="@style/MainMenuButton.Primary"
                android:text="🍽️ Item Management" />

            <Button
                android:id="@+id/defaultMenuManagementButton"
                style="@style/MainMenuButton.Primary"
                android:text="📋 Default Menu Management" />

        </LinearLayout>

        <!-- Logout Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/logoutButton"
                style="@style/LogoutButton"
                android:text="🚪 Logout" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>