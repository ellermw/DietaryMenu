<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f9fa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Card -->
        <LinearLayout
            style="@style/HeaderCard">

            <TextView
                style="@style/AppTitle"
                android:text="🏥 Hospital Dietary Management" />

            <TextView
                android:id="@+id/welcomeText"
                style="@style/WelcomeText"
                android:text="Welcome!" />

        </LinearLayout>

        <!-- Operations Section -->
        <LinearLayout
            style="@style/CardSection">

            <TextView
                style="@style/SectionTitle"
                android:text="Operations" />

            <!-- Patient Info Button -->
            <Button
                android:id="@+id/patientInfoButton"
                style="@style/MainMenuButton.Green"
                android:text="👤  Patient Info" />

            <!-- Pending Orders Button -->
            <Button
                android:id="@+id/pendingOrdersButton"
                style="@style/MainMenuButton.Orange"
                android:text="📋  Pending Orders" />

            <!-- Retired Orders Button -->
            <Button
                android:id="@+id/retiredOrdersButton"
                style="@style/MainMenuButton.Gray"
                android:text="✅  Retired Orders"
                android:layout_marginBottom="0dp" />

        </LinearLayout>

        <!-- Documents Section -->
        <LinearLayout
            style="@style/CardSection">

            <TextView
                style="@style/SectionTitle"
                android:text="Documents" />

            <!-- Documents buttons row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp">

                <Button
                    android:id="@+id/productionSheetsButton"
                    style="@style/MainMenuButton.Primary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="0dp"
                    android:textSize="14sp"
                    android:text="📄  Production Sheets" />

                <Button
                    android:id="@+id/stockSheetsButton"
                    style="@style/MainMenuButton.Primary"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="0dp"
                    android:textSize="14sp"
                    android:text="📊  Stock Sheets" />

            </LinearLayout>

        </LinearLayout>

        <!-- Admin Tools Section -->
        <LinearLayout
            android:id="@+id/adminToolsSection"
            style="@style/CardSection">

            <TextView
                style="@style/SectionTitle"
                android:text="Admin Tools" />

            <!-- Admin buttons row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="0dp">

                <Button
                    android:id="@+id/userManagementButton"
                    style="@style/MainMenuButton.Purple"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="0dp"
                    android:textSize="14sp"
                    android:text="👥  User Management" />

                <Button
                    android:id="@+id/itemManagementButton"
                    style="@style/MainMenuButton.Pink"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="0dp"
                    android:textSize="14sp"
                    android:text="📋  Item Management" />

            </LinearLayout>

        </LinearLayout>

        <!-- Logout Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/logoutButton"
                style="@style/LogoutButton"
                android:text="Logout" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>