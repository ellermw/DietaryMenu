<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f5f5">

    <!-- Main Menu Container -->
    <LinearLayout
        android:id="@+id/mainMenuContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="visible">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Administrator Panel"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="2dp" />

        <!-- Admin Menu Options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/usersMenuButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="👥 Manage Users"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="#3498db"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/itemsMenuButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="🍽️ Manage Items"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="#27ae60"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"
                android:elevation="2dp" />

            <!-- NEW: Default Menu Management Button -->
            <Button
                android:id="@+id/defaultMenuButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="📋 Default Menu Management"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="#e67e22"
                android:textColor="@android:color/white"
                android:layout_marginBottom="8dp"
                android:elevation="2dp" />

        </LinearLayout>

        <!-- Back Button -->
        <Button
            android:id="@+id/backToMenuButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="← Back to Main Menu"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="#6c757d"
            android:textColor="@android:color/white"
            android:elevation="2dp" />

    </LinearLayout>

    <!-- Users Management Container -->
    <LinearLayout
        android:id="@+id/usersContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <!-- Users Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/userSearchEditText"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Search users..."
                android:layout_marginEnd="8dp"
                android:background="#f8f9fa"
                android:padding="12dp" />

            <Button
                android:id="@+id/addUserButton"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="+ Add"
                android:textSize="14sp"
                android:background="#28a745"
                android:textColor="@android:color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

        </LinearLayout>

        <!-- Users Count -->
        <TextView
            android:id="@+id/usersCountText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Users: 0"
            android:textSize="14sp"
            android:textColor="#7f8c8d"
            android:layout_marginBottom="8dp" />

        <!-- Users List -->
        <ListView
            android:id="@+id/usersListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#e0e0e0"
            android:dividerHeight="1dp"
            android:background="@android:color/white"
            android:elevation="2dp" />

    </LinearLayout>

    <!-- Items Management Container -->
    <LinearLayout
        android:id="@+id/itemsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone">

        <!-- Items Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp">

            <!-- Search and Add Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <EditText
                    android:id="@+id/itemSearchEditText"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Search items..."
                    android:layout_marginEnd="8dp"
                    android:background="#f8f9fa"
                    android:padding="12dp" />

                <Button
                    android:id="@+id/addItemButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="+ Add"
                    android:textSize="14sp"
                    android:background="#28a745"
                    android:textColor="@android:color/white"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

            </LinearLayout>

            <!-- Category Filter -->
            <Spinner
                android:id="@+id/categoryFilterSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#f8f9fa" />

        </LinearLayout>

        <!-- Items Count -->
        <TextView
            android:id="@+id/itemsCountText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Items: 0"
            android:textSize="14sp"
            android:textColor="#7f8c8d"
            android:layout_marginBottom="8dp" />

        <!-- Items List -->
        <ListView
            android:id="@+id/itemsListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#e0e0e0"
            android:dividerHeight="1dp"
            android:background="@android:color/white"
            android:elevation="2dp" />

    </LinearLayout>

</LinearLayout>