<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#f8f9fa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Patient Information Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Patient Information"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/patientNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/locationText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2 North - Room 205"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:drawableStart="@android:drawable/ic_menu_mylocation"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/createdDateText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Admitted: Jan 15, 2024"
                    android:textSize="14sp"
                    android:textColor="#7f8c8d"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Dietary Requirements Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dietary Requirements"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Diet:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dietText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Regular" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Fluid Restriction:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/fluidRestrictionText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="No Restriction" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Texture Mods:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textureModificationsText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="None" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Preferences Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Preferences &amp; Notes"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Allergies:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/allergiesText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="None" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Likes:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/likesText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="None" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Dislikes:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dislikesText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="None" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Comments:"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/commentsText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="None" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Meal Status Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/mealStatusSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/orderDateText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Today's Orders"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/breakfastCompleteCheckBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Breakfast"
                        android:enabled="false" />

                    <CheckBox
                        android:id="@+id/lunchCompleteCheckBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Lunch"
                        android:enabled="false" />

                    <CheckBox
                        android:id="@+id/dinnerCompleteCheckBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dinner"
                        android:enabled="false" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Meal Items Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/mealItemsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Meal Orders"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:layout_marginBottom="16dp" />

                <!-- Breakfast -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ³ Breakfast"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/breakfastItemsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No items ordered"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/breakfastDrinksText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Drink: None"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp" />

                <!-- Lunch -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¥™ Lunch"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/lunchItemsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No items ordered"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/lunchDrinksText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Drink: None"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp" />

                <!-- Dinner -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ½ï¸ Dinner"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/dinnerItemsText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No items ordered"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/dinnerDrinksText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Drink: None"
                    android:layout_marginStart="16dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/editPatientButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="âœï¸ Edit Info"
                    android:textSize="14sp"
                    android:background="#2196F3"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/editMealPlanButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="ðŸ½ï¸ Edit Meals"
                    android:textSize="14sp"
                    android:background="#4CAF50"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/transferRoomButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="ðŸ”„ Transfer Room"
                    android:textSize="14sp"
                    android:background="#FF9800"
                    android:textColor="@android:color/white"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/dischargePatientButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:text="ðŸ¥ Discharge"
                    android:textSize="14sp"
                    android:background="#f44336"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>