    </style>
    <style name="MainMenuButton.Red" parent="MainMenuButton">
        <item name="android:background">@drawable/button_red</item>
    </style>
    <style name="MainMenuButton.SideBySide">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
