<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground">

    <CheckBox
        android:id="@+id/selectionCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="8dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/patientNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Patient Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2c3e50" />

        <TextView
            android:id="@+id/patientLocationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wing - Room"
            android:textSize="14sp"
            android:textColor="#7f8c8d" />

        <TextView
            android:id="@+id/patientDietText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diet: Regular"
            android:textSize="14sp"
            android:textColor="#34495e" />

    </LinearLayout>

    <TextView
        android:id="@+id/patientMealStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="B✓ L✓ D✓"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#27ae60" />

</LinearLayout>