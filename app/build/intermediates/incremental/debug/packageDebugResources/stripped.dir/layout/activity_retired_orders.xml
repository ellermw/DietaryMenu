<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8f9fa">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="2dp">

        <TextView
            android:id="@+id/retiredOrdersTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“‹ Retired Orders"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Orders from discharged patients or patients older than 6 days"
            android:textSize="14sp"
            android:textColor="#7f8c8d"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Date Selection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/selectedDateText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Showing: All retired orders"
                android:textSize="16sp"
                android:textColor="#34495e" />

            <Button
                android:id="@+id/selectDateButton"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Select Date"
                android:textSize="14sp"
                android:background="#3498db"
                android:textColor="@android:color/white"
                android:paddingStart="16dp"
                android:paddingEnd="16dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Orders List -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <ListView
            android:id="@+id/retiredOrdersListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:divider="#e5e5e5"
            android:dividerHeight="1dp"
            android:padding="8dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/noRetiredOrdersText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="No retired orders found"
            android:textSize="18sp"
            android:textColor="#7f8c8d"
            android:textAlignment="center"
            android:gravity="center"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="4dp">

        <!-- Print Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/printAllButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Print All"
                android:textSize="16sp"
                android:background="#27ae60"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/printSelectedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Print Selected"
                android:textSize="16sp"
                android:background="#3498db"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Navigation Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/backButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Back"
                android:textSize="16sp"
                android:background="#95a5a6"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/homeButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Home"
                android:textSize="16sp"
                android:background="#34495e"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>