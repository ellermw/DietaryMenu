<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8f9fa">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="20dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="✅ Finished Orders"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Patients with completed meal orders (read-only)"
            android:textSize="16sp"
            android:textColor="#7f8c8d"
            android:gravity="center" />

    </LinearLayout>

    <!-- Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp">

        <Button
            android:id="@+id/backButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="← Back"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:background="#95a5a6"
            android:layout_marginEnd="8dp"
            android:elevation="2dp" />

        <Button
            android:id="@+id/refreshButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="🔄 Refresh"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:background="#3498db"
            android:layout_marginStart="8dp"
            android:elevation="2dp" />

    </LinearLayout>

    <!-- Orders List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="2dp">

        <!-- List Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#d5f4e6"
            android:padding="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Patient"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2c3e50" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Location"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Status"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:gravity="end" />

        </LinearLayout>

        <!-- Orders ListView -->
        <ListView
            android:id="@+id/finishedOrdersListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="#d5f4e6"
            android:dividerHeight="1dp"
            android:scrollbars="vertical" />

        <!-- No Orders Message -->
        <TextView
            android:id="@+id/noFinishedOrdersText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="📋 No finished orders yet!\nComplete some meal orders to see them here."
            android:textSize="18sp"
            android:textColor="#7f8c8d"
            android:gravity="center"
            android:visibility="gone"
            android:padding="32dp" />

    </LinearLayout>

</LinearLayout>