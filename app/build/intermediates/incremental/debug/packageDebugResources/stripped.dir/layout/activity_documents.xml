<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f8fafc">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📄 Documents"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#2c3e50"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Document Management"
        android:textSize="16sp"
        android:textColor="#7f8c8d"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Documents Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="20dp"
        android:elevation="2dp"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Document Categories"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Production Sheets Button -->
        <Button
            android:id="@+id/productionSheetsButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="📊 Production Sheets"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#3498db"
            android:layout_marginBottom="16dp"
            android:elevation="4dp" />

        <!-- Galley Stock Button -->
        <Button
            android:id="@+id/galleyStockButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="🏪 Galley Stock"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#27ae60"
            android:layout_marginBottom="16dp"
            android:elevation="4dp" />

        <!-- Misc Button -->
        <Button
            android:id="@+id/miscButton"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="📝 Misc"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:background="#9b59b6"
            android:layout_marginBottom="16dp"
            android:elevation="4dp" />

    </LinearLayout>

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="⬅️ Back to Main Menu"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:background="#34495e"
        android:layout_marginTop="16dp"
        android:elevation="4dp" />

</LinearLayout>