<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hospital.dietary"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="34" />

    <permission
        android:name="com.hospital.dietary.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.hospital.dietary.DYNAMIC_RECEIVER_NOT_EXPORTED_PERMISSION" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.DietaryMenu" >

        <!-- Login Activity - Entry Point -->
        <activity
            android:name="com.hospital.dietary.LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Menu Activity - Updated main menu with admin options -->
        <activity
            android:name="com.hospital.dietary.MainMenuActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.LoginActivity" />

        <!-- Patient Information Menu Activity - New submenu -->
        <activity
            android:name="com.hospital.dietary.PatientInfoMenuActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.MainMenuActivity" />

        <!-- New Patient Activity - Create new patient -->
        <activity
            android:name="com.hospital.dietary.NewPatientActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.PatientInfoMenuActivity" />

        <!-- Existing Patient Activity - View existing patients -->
        <activity
            android:name="com.hospital.dietary.ExistingPatientActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.PatientInfoMenuActivity" />

        <!-- Patient Detail Activity - View patient details -->
        <activity
            android:name="com.hospital.dietary.PatientDetailActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.ExistingPatientActivity" />

        <!-- Pending Orders Activity -->
        <activity
            android:name="com.hospital.dietary.PendingOrdersActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.MainMenuActivity" />

        <!-- Finished Orders Activity -->
        <activity
            android:name="com.hospital.dietary.FinishedOrdersActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.MainMenuActivity" />

        <!-- Retired Orders Activity - Orders older than 6 days -->
        <activity
            android:name="com.hospital.dietary.RetiredOrdersActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.MainMenuActivity" />

        <!-- Admin Activities - Only accessible by admin users -->
        <activity
            android:name="com.hospital.dietary.UserManagementActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.MainMenuActivity" />
        <activity
            android:name="com.hospital.dietary.ItemManagementActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.MainMenuActivity" />

        <!-- Meal Planning Activity -->
        <activity
            android:name="com.hospital.dietary.MealPlanningActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.PatientDetailActivity" />

        <!-- View Orders Activity -->
        <activity
            android:name="com.hospital.dietary.ViewOrdersActivity"
            android:exported="false"
            android:parentActivityName="com.hospital.dietary.MainMenuActivity" />

        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.hospital.dietary.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

</manifest>