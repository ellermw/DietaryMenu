    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        
        <item name="android:spinnerStyle">@style/SpinnerStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemStyle</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="AppTitle">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2c3e50</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="CardSection">
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:elevation">2dp</item>
    </style>
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:drawable/edit_text</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    <style name="DialogContent">
        <item name="android:padding">16dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
    </style>
    <style name="DialogLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#2c3e50</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsFloating">false</item>
    </style>
    <style name="HeaderCard">
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    <style name="LogoutButton">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_logout</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>
    <style name="MainMenuButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="MainMenuButton.Gray">
        <item name="android:background">@drawable/button_rounded_blue</item>
    </style>
    <style name="MainMenuButton.Green">
        <item name="android:background">@drawable/button_rounded_blue</item>
    </style>
    <style name="MainMenuButton.Orange">
        <item name="android:background">@drawable/button_rounded_blue</item>
    </style>
    <style name="MainMenuButton.Pink">
        <item name="android:background">@drawable/button_rounded_blue</item>
    </style>
    <style name="MainMenuButton.Primary">
        <item name="android:background">@drawable/button_rounded_blue</item>
    </style>
    <style name="MainMenuButton.Purple">
        <item name="android:background">@drawable/button_rounded_blue</item>
    </style>
    <style name="MainMenuButton.Red">
        <item name="android:background">@drawable/button_logout</item>
    </style>
    <style name="MainMenuButton.SideBySide">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@drawable/button_rounded_blue</item>
    </style>
    <style name="PrimaryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minHeight">48dp</item>
    </style>
    <style name="SecondaryButton" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">48dp</item>
    </style>
    <style name="SectionTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2c3e50</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    <style name="SpinnerDropDownItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">12dp</item>
    </style>
    <style name="WelcomeText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#7f8c8d</item>
        <item name="android:gravity">center</item>
    </style>
