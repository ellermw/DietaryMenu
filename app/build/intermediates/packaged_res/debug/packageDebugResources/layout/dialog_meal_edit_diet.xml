<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Diet Type Selection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diet Type"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:textColor="#2c3e50" />

    <Spinner
        android:id="@+id/mealDietSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/spinner_background"
        android:padding="12dp" />

    <!-- ADA Toggle Layout (shown only for applicable diets) -->
    <LinearLayout
        android:id="@+id/mealAdaToggleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ada_toggle_background"
        android:padding="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ADA (American Diabetic Association) Diet"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#e74c3c" />

        <Switch
            android:id="@+id/mealAdaSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Information Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This will change the diet for this specific meal only. Other meals will keep their current diet settings."
        android:textSize="12sp"
        android:textColor="#7f8c8d"
        android:textStyle="italic"
        android:layout_marginTop="8dp" />

</LinearLayout>