<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f9fa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/header_card_background"
            android:padding="24dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🏥 Hospital Dietary Management"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:gravity="center" />

            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome!"
                android:textSize="16sp"
                android:textColor="#7f8c8d"
                android:gravity="center"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Operations Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Operations"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="12dp" />

            <!-- Patient Info Button -->
            <Button
                android:id="@+id/patientInfoButton"
                style="@style/MainMenuButton.Primary"
                android:text="👤  Patient Info" />

            <!-- Pending Orders Button -->
            <Button
                android:id="@+id/pendingOrdersButton"
                style="@style/MainMenuButton.Primary"
                android:text="📋  Pending Orders" />

            <!-- Retired Orders Button -->
            <Button
                android:id="@+id/retiredOrdersButton"
                style="@style/MainMenuButton.Primary"
                android:text="✅  Retired Orders"
                android:layout_marginBottom="0dp" />

        </LinearLayout>

        <!-- Documents Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Documents"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="12dp" />

            <!-- Documents buttons -->
            <Button
                android:id="@+id/productionSheetsButton"
                style="@style/MainMenuButton.Primary"
                android:text="📊 Production Sheets" />

            <Button
                android:id="@+id/stockSheetsButton"
                style="@style/MainMenuButton.Primary"
                android:text="📈 Stock Sheets"
                android:layout_marginBottom="0dp" />

        </LinearLayout>

        <!-- Admin Tools Section -->
        <LinearLayout
            android:id="@+id/adminToolsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🔧 Admin Tools"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="12dp" />

            <!-- All three admin buttons in vertical layout -->
            <Button
                android:id="@+id/userManagementButton"
                style="@style/MainMenuButton.Primary"
                android:text="👥 User Management" />

            <Button
                android:id="@+id/itemManagementButton"
                style="@style/MainMenuButton.Primary"
                android:text="🍽️ Item Management" />

            <Button
                android:id="@+id/defaultMenuManagementButton"
                style="@style/MainMenuButton.Primary"
                android:text="📋 Default Menu Management"
                android:layout_marginBottom="0dp" />

        </LinearLayout>

        <!-- Logout Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="200dp"
                android:layout_height="56dp"
                android:text="🚪 Logout"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/button_logout"
                android:elevation="4dp"
                android:stateListAnimator="@null" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>