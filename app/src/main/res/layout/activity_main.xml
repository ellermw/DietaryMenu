                        android:background="#e8f5e8"
                        android:padding="4dp"
                        android:layout_marginBottom="4dp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/dinnerDrinksContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+ Add Drink"
                        android:onClick="addDinnerDrink"
                        android:background="#3498db"
                        android:textColor="@android:color/white"
                        android:padding="8dp"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dessert:"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/dinnerDessert"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear Order"
                android:onClick="clearForm"
                android:background="#95a5a6"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp"
                android:padding="12dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Apply Defaults"
                android:onClick="applyDefaults"
                android:background="@android:color/white"
                android:textColor="#e74c3c"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:padding="12dp" />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Finalize Order"
                android:onClick="finalizeOrder"
                android:background="#27ae60"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"
                android:padding="12dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
