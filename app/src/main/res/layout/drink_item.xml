<?xml version="1.0" encoding="utf-8"?>
<!-- app/src/main/res/layout/drink_item_layout.xml -->
<!-- Layout file for individual drink items in the Clear Liquid diet and other drink containers -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/rounded_border"
    android:gravity="center_vertical">

    <!-- Drink Item Name -->
    <TextView
        android:id="@+id/drinkItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Drink Name"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingEnd="8dp" />

    <!-- Quantity -->
    <TextView
        android:id="@+id/drinkQuantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="1"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@android:color/black" />

    <!-- Fluid Volume -->
    <TextView
        android:id="@+id/drinkFluidML"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="200 ml"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="@android:color/darker_gray" />

    <!-- Remove Button -->
    <Button
        android:id="@+id/removeDrinkButton"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:text="Ã—"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/remove_button_background"
        android:textColor="@android:color/white"
        android:layout_marginStart="8dp"
        android:padding="0dp" />

</LinearLayout>