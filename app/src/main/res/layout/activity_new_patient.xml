<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f9fa"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Patient Information Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="20dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patient Information"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="16dp" />

            <!-- Patient First Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First Name *"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/patientFirstNameEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter first name"
                android:background="?android:attr/editTextBackground"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"
                android:importantForAutofill="no" />

            <!-- Patient Last Name -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Name *"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/patientLastNameEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter last name"
                android:background="?android:attr/editTextBackground"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginBottom="12dp"
                android:importantForAutofill="no" />

            <!-- Wing Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wing *"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/wingSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="?android:attr/editTextBackground"
                android:layout_marginBottom="12dp" />

            <!-- Room Number Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Number *"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/roomNumberSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="?android:attr/editTextBackground"
                android:layout_marginBottom="12dp" />

        </LinearLayout>

        <!-- Diet Information Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="20dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diet Information"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="16dp" />

            <!-- Diet Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diet Type *"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/dietSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="?android:attr/editTextBackground"
                android:layout_marginBottom="12dp" />

            <!-- ADA Diet Toggle -->
            <CheckBox
                android:id="@+id/adaToggleCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADA Diet (American Diabetes Association)"
                android:textSize="14sp"
                android:textColor="#2c3e50"
                android:layout_marginBottom="12dp"
                android:visibility="gone" />

            <!-- Fluid Restriction -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fluid Restriction"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/fluidRestrictionSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="?android:attr/editTextBackground"
                android:layout_marginBottom="12dp" />

        </LinearLayout>

        <!-- FIXED: Texture Modifications Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="20dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texture_modifications"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/texture_note"
                android:textSize="12sp"
                android:textColor="#e74c3c"
                android:background="#fdf2f2"
                android:padding="8dp"
                android:layout_marginBottom="12dp" />

            <!-- FIXED: Multiple checkbox selections allowed -->
            <CheckBox
                android:id="@+id/mechanicalChoppedCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mechanical_chopped"
                android:textSize="14sp"
                android:textColor="#2c3e50"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/mechanicalGroundCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mechanical_ground"
                android:textSize="14sp"
                android:textColor="#2c3e50"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/biteSizeCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bite_size"
                android:textSize="14sp"
                android:textColor="#2c3e50"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/breadOKCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bread_ok"
                android:textSize="14sp"
                android:textColor="#27ae60"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/clearFormButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Clear Form"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="#95a5a6"
                android:elevation="2dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/savePatientButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Save Patient"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="#27ae60"
                android:elevation="2dp"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>