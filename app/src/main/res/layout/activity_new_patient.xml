<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f7fa"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¤âž• Add New Patient"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1e3a8a"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter patient information and assign location"
                android:textSize="14sp"
                android:textColor="#64748b"
                android:gravity="center" />

        </LinearLayout>

        <!-- Patient Information Form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patient Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1f2937"
                android:layout_marginBottom="16dp" />

            <!-- First Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First Name *"
                android:textSize="14sp"
                android:textColor="#374151"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/firstNameEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter first name"
                android:background="?android:attr/editTextBackground"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Last Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Name *"
                android:textSize="14sp"
                android:textColor="#374151"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/lastNameEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter last name"
                android:background="?android:attr/editTextBackground"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Wing Selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wing *"
                android:textSize="14sp"
                android:textColor="#374151"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/wingSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="?android:attr/editTextBackground"
                android:layout_marginBottom="16dp" />

            <!-- Room Selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Room Number *"
                android:textSize="14sp"
                android:textColor="#374151"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/roomSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="?android:attr/editTextBackground"
                android:layout_marginBottom="16dp" />

            <!-- Diet Selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diet Type *"
                android:textSize="14sp"
                android:textColor="#374151"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/dietSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="?android:attr/editTextBackground"
                android:layout_marginBottom="16dp" />

            <!-- Fluid Restriction -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fluid Restriction (optional)"
                android:textSize="14sp"
                android:textColor="#374151"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/fluidRestrictionEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="e.g., 2000ml/day"
                android:background="?android:attr/editTextBackground"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Texture Modifications -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texture Modifications (optional)"
                android:textSize="14sp"
                android:textColor="#374151"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/textureModificationsEditText"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="e.g., Mechanical soft, pureed"
                android:background="?android:attr/editTextBackground"
                android:padding="12dp"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/backButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="â† Cancel"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="#6b7280" />

            <Button
                android:id="@+id/savePatientButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="ðŸ’¾ Save Patient"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="#059669" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>