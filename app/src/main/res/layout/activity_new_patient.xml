<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f7fa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📝 New Patient"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1e3a8a"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create a new patient profile for meal planning"
                android:textSize="16sp"
                android:textColor="#64748b"
                android:gravity="center" />

        </LinearLayout>

        <!-- Patient Form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <!-- Patient Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patient Name *"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1e3a8a"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/patientNameInput"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter patient name"
                android:background="@android:drawable/edit_text"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:inputType="textPersonName" />

            <!-- Wing Selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wing *"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1e3a8a"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/wingSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="16dp" />

            <!-- Room Selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Room Number *"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1e3a8a"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/roomSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="16dp" />

            <!-- Diet Type -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diet Type *"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1e3a8a"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/dietSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="16dp" />

            <!-- Fluid Restriction -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fluid Restriction *"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1e3a8a"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/fluidRestrictionSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="16dp" />

            <!-- Texture Modifications -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texture Modifications"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1e3a8a"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <CheckBox
                    android:id="@+id/mechanicalGroundCB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mechanical Ground"
                    android:textSize="14sp"
                    android:textColor="#374151" />

                <CheckBox
                    android:id="@+id/mechanicalChoppedCB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mechanical Chopped"
                    android:textSize="14sp"
                    android:textColor="#374151" />

                <CheckBox
                    android:id="@+id/biteSizeCB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bite Size"
                    android:textSize="14sp"
                    android:textColor="#374151" />

                <CheckBox
                    android:id="@+id/breadOKCB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bread OK"
                    android:textSize="14sp"
                    android:textColor="#374151" />

                <CheckBox
                    android:id="@+id/adaFriendlyCB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ADA Friendly"
                    android:textSize="14sp"
                    android:textColor="#374151"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/clearFormButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="🧹 Clear Form"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#dc2626"
                android:background="#fef2f2"
                android:elevation="2dp" />

            <Button
                android:id="@+id/savePatientButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="💾 Save Patient"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#16a34a"
                android:background="#f0fdf4"
                android:elevation="2dp" />

        </LinearLayout>

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="← Back to Patient Menu"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="#dc2626"
            android:elevation="2dp" />

    </LinearLayout>

</ScrollView>