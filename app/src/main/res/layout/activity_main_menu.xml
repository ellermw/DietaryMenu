<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f8fafc">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="24dp"
        android:layout_marginBottom="24dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🏥 Dietary Management"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1e3a8a"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome, User!"
            android:textSize="18sp"
            android:textColor="#64748b"
            android:gravity="center" />

    </LinearLayout>

    <!-- Menu Options Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- First Row: Patient Information and Pending Orders -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/patientInfoButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="👤 Patient Information"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1e3a8a"
                android:background="#f0f9ff"
                android:elevation="2dp" />

            <Button
                android:id="@+id/pendingOrdersButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="⏳ Pending Orders"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#dc2626"
                android:background="#fef2f2"
                android:elevation="2dp" />

        </LinearLayout>

        <!-- Second Row: Retired Orders (single button, centered) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="center">

            <Button
                android:id="@+id/retiredOrdersButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="🗃️ Retired Orders"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#7c3aed"
                android:background="#f3f4f6"
                android:elevation="2dp" />

        </LinearLayout>

        <!-- Admin Section (Only visible for admins) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="⚙️ Administration"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#374151"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/userManagementButton"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="👥 User Management"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#059669"
                    android:background="#ecfdf5"
                    android:elevation="2dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/itemManagementButton"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="🍽️ Item Management"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#0891b2"
                    android:background="#f0f9ff"
                    android:elevation="2dp"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Logout Button -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="🚪 Logout"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="#dc2626"
        android:elevation="2dp" />

</LinearLayout>