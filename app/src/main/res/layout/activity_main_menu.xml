<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f7fa"
    android:padding="16dp">

    <!-- Header with Hospital Logo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="24dp"
        android:layout_marginBottom="20dp"
        android:elevation="4dp">

        <!-- Logo placeholder - replace with actual logo -->
        <ImageView
            android:id="@+id/hospitalLogo"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_marginBottom="16dp"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="McAlester Regional Health Center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1e3a8a"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dietary Management System"
            android:textSize="16sp"
            android:textColor="#64748b"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textSize="18sp"
            android:textColor="#1e3a8a"
            android:gravity="center"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Menu Options Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- First Row: Patient Information and Pending Orders -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/patientInfoButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="👤 Patient Information"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1e3a8a"
                android:background="#f0f9ff"
                android:elevation="2dp" />

            <Button
                android:id="@+id/pendingOrdersButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="⏳ Pending Orders"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#dc2626"
                android:background="#fef2f2"
                android:elevation="2dp" />

        </LinearLayout>

        <!-- Second Row: Finished Orders and Admin (if applicable) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/finishedOrdersButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="✅ Finished Orders"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#16a34a"
                android:background="#f0fdf4"
                android:elevation="2dp" />

            <Button
                android:id="@+id/adminButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="⚙️ Admin Panel"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#7c3aed"
                android:background="#faf5ff"
                android:elevation="2dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Third Row: Additional buttons if needed -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/userManagementButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="👥 User Management"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#7c3aed"
                android:background="#faf5ff"
                android:elevation="2dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/itemManagementButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="🍽️ Item Management"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#ea580c"
                android:background="#fff7ed"
                android:elevation="2dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <!-- Logout Button -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="🚪 Logout"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="#dc2626"
        android:layout_marginTop="16dp"
        android:elevation="2dp" />

</LinearLayout>