<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f9fa"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal">

        <!-- Welcome Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="24dp"
            android:elevation="4dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_message"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:textAlignment="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hospital Dietary Management System"
                android:textSize="14sp"
                android:textColor="#7f8c8d"
                android:textAlignment="center" />

        </LinearLayout>

        <!-- Main Menu Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Patient Information -->
            <Button
                android:id="@+id/patientInfoButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@string/patient_info"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:background="#3498db"
                android:elevation="3dp"
                android:layout_marginBottom="12dp" />

            <!-- Pending Orders -->
            <Button
                android:id="@+id/pendingOrdersButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@string/pending_orders"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:background="#f39c12"
                android:elevation="3dp"
                android:layout_marginBottom="12dp" />

            <!-- Retired Orders -->
            <Button
                android:id="@+id/retiredOrdersButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@string/retired_orders"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:background="#27ae60"
                android:elevation="3dp"
                android:layout_marginBottom="20dp" />

            <!-- Divider for Admin Functions -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#bdc3c7"
                android:layout_marginBottom="20dp" />

            <!-- FEATURE: Account Management (Available to all users) -->
            <Button
                android:id="@+id/accountManagementButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@string/account_management"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:background="#e74c3c"
                android:elevation="3dp"
                android:layout_marginBottom="12dp" />

            <!-- User Management (Admin Only) -->
            <Button
                android:id="@+id/userManagementButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@string/user_management"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:background="#9b59b6"
                android:elevation="3dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone" />

            <!-- Item Management (Admin Only) -->
            <Button
                android:id="@+id/itemManagementButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="@string/item_management"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:background="#16a085"
                android:elevation="3dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone" />

            <!-- Logout -->
            <Button
                android:id="@+id/logoutButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/logout"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="#95a5a6"
                android:elevation="2dp" />

        </LinearLayout>

        <!-- Version Information -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_version"
            android:textSize="12sp"
            android:textColor="#bdc3c7"
            android:layout_marginTop="24dp" />

    </LinearLayout>

</ScrollView>