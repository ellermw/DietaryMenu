<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8fafc">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Welcome Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="20dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Welcome!"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hospital Dietary Management System"
                    android:textSize="16sp"
                    android:textColor="#7f8c8d" />

            </LinearLayout>

            <!-- Operations Section -->
            <LinearLayout
                android:id="@+id/operationsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="20dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Operations"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:layout_marginBottom="16dp" />

                <!-- Patient Info Button -->
                <Button
                    android:id="@+id/patientInfoButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ‘¤    Patient Information"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="24dp"
                    android:background="@drawable/button_primary"
                    android:layout_marginBottom="12dp" />

                <!-- Pending Orders Button -->
                <Button
                    android:id="@+id/pendingOrdersButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ“‹    Pending Orders"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="24dp"
                    android:background="@drawable/button_primary"
                    android:layout_marginBottom="12dp" />

                <!-- Retired Orders Button -->
                <Button
                    android:id="@+id/retiredOrdersButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ“    Retired Orders"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="24dp"
                    android:background="@drawable/button_primary" />

            </LinearLayout>

            <!-- Documents Section (renamed from Your Account) -->
            <LinearLayout
                android:id="@+id/documentsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="20dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Documents"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:layout_marginBottom="16dp" />

                <!-- Production Documents Button -->
                <Button
                    android:id="@+id/productionDocumentsButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ“Š    Production Documents"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="24dp"
                    android:background="@drawable/button_primary"
                    android:layout_marginBottom="12dp" />

                <!-- Stock Sheets Button -->
                <Button
                    android:id="@+id/stockSheetsButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ“‹    Stock Sheets"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="24dp"
                    android:background="@drawable/button_primary" />

            </LinearLayout>

            <!-- Admin Tools Section (only visible for admins) -->
            <LinearLayout
                android:id="@+id/adminToolsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="20dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin Tools"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:layout_marginBottom="16dp" />

                <!-- User Management Button -->
                <Button
                    android:id="@+id/userManagementButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ‘¥    User Management"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="24dp"
                    android:background="@drawable/button_primary"
                    android:layout_marginBottom="12dp" />

                <!-- Item Management Button -->
                <Button
                    android:id="@+id/itemManagementButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ“‹    Item Management"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="24dp"
                    android:background="@drawable/button_primary"
                    android:layout_marginBottom="12dp" />

                <!-- Default Menu Management Button -->
                <Button
                    android:id="@+id/defaultMenuManagementButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ½ï¸    Default Menu Management"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="24dp"
                    android:background="@drawable/button_primary" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Logout Button -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="ðŸšª    Logout"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:gravity="left|center_vertical"
        android:paddingLeft="24dp"
        android:background="#e74c3c"
        android:layout_margin="16dp"
        android:elevation="4dp" />

</LinearLayout>