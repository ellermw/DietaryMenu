<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8fafc">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#2196F3"
        android:padding="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hospital Dietary Management"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Welcome Message -->
            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome, System Administrator!"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Operations Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Operations"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/patientInfoButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ‘¤  Patient Info"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="24dp"
                    android:background="#2196F3"
                    android:layout_marginBottom="12dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/pendingOrdersButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="ðŸ“‹  Pending Orders"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="24dp"
                    android:background="#2196F3"
                    android:layout_marginBottom="12dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/retiredOrdersButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="âœ…  Retired Orders"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="24dp"
                    android:background="#2196F3"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Documents Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Documents"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:layout_marginBottom="16dp" />

                <!-- Two buttons per row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/productionSheetsButton"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:text="ðŸ“‹  Production Sheets"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:background="#2196F3"
                        android:layout_marginEnd="8dp"
                        android:textStyle="bold"
                        android:padding="8dp" />

                    <Button
                        android:id="@+id/stockSheetsButton"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:text="ðŸ“Š  Stock Sheets"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:background="#2196F3"
                        android:layout_marginStart="8dp"
                        android:textStyle="bold"
                        android:padding="8dp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Admin Tools Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Admin Tools"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:layout_marginBottom="16dp" />

                <!-- Two buttons per row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/userManagementButton"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:text="ðŸ‘¥  User Management"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:background="#2196F3"
                        android:layout_marginEnd="8dp"
                        android:textStyle="bold"
                        android:padding="8dp" />

                    <Button
                        android:id="@+id/itemManagementButton"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_weight="1"
                        android:text="ðŸ“‹  Item Management"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:background="#2196F3"
                        android:layout_marginStart="8dp"
                        android:textStyle="bold"
                        android:padding="8dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Logout Button - Small rounded style -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center">

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Logout"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_logout_rounded"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>