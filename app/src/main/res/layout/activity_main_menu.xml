<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f7fa"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="24dp"
        android:layout_marginBottom="20dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🏥 Hospital Dietary Menu"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1e3a8a"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textSize="18sp"
            android:textColor="#64748b"
            android:gravity="center" />

    </LinearLayout>

    <!-- Menu Options Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- First Row: Patient Information and Pending Orders -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/patientInfoButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="👤 Patient Information"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1e3a8a"
                android:background="#f0f9ff"
                android:elevation="2dp" />

            <Button
                android:id="@+id/pendingOrdersButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="⏳ Pending Orders"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#dc2626"
                android:background="#fef2f2"
                android:elevation="2dp" />

        </LinearLayout>

        <!-- Second Row: Finished Orders and Retired Orders -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/finishedOrdersButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="✅ Finished Orders"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#059669"
                android:background="#f0fdf4"
                android:elevation="2dp" />

            <Button
                android:id="@+id/retiredOrdersButton"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="🗃️ Retired Orders"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#7c2d12"
                android:background="#fef7ed"
                android:elevation="2dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Logout Button -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="🚪 Logout"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="#ef4444"
        android:layout_marginTop="20dp" />

</LinearLayout>