<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8f9fa"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="24dp"
        android:layout_marginBottom="20dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🏥 Hospital Dietary System"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textSize="18sp"
            android:textColor="#7f8c8d"
            android:gravity="center" />

    </LinearLayout>

    <!-- Menu Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/patientInfoButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="👤 Patient Information"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="#3498db"
            android:layout_marginBottom="12dp"
            android:elevation="2dp" />

        <Button
            android:id="@+id/finishedOrdersButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="✅ Finished Orders"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="#27ae60"
            android:layout_marginBottom="12dp"
            android:elevation="2dp" />

        <Button
            android:id="@+id/pendingOrdersButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="⏳ Pending Orders"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="#f39c12"
            android:layout_marginBottom="12dp"
            android:elevation="2dp" />

        <Button
            android:id="@+id/userManagementButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="👥 User Management"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="#9b59b6"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"
            android:visibility="gone" />

        <Button
            android:id="@+id/itemManagementButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="🍽️ Item Management"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="#e67e22"
            android:layout_marginBottom="12dp"
            android:elevation="2dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Logout Button -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="🚪 Logout"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="#e74c3c"
        android:layout_marginTop="16dp"
        android:elevation="2dp" />

</LinearLayout>