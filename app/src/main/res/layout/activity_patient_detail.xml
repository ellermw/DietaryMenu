<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f9fa"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Patient Information Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="20dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patient Information"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/patientNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patient Name"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/roomLocationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Room Location"
                android:textSize="16sp"
                android:textColor="#34495e"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/dietTypeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diet Type"
                android:textSize="16sp"
                android:textColor="#34495e"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/fluidRestrictionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fluid Restriction"
                android:textSize="14sp"
                android:textColor="#7f8c8d"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/textureModsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texture Modifications"
                android:textSize="14sp"
                android:textColor="#7f8c8d"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/adaStatusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADA Diet"
                android:textSize="14sp"
                android:textColor="#e74c3c"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Meal Plan Section -->
        <LinearLayout
            android:id="@+id/mealPlanSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="20dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Meal Plan"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="16dp" />

            <!-- Breakfast -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ³ Breakfast"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#e67e22"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/breakfastItemsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No items selected"
                android:textSize="14sp"
                android:textColor="#34495e"
                android:layout_marginBottom="8dp"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:id="@+id/breakfastDrinksText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No drinks selected"
                android:textSize="12sp"
                android:textColor="#7f8c8d"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="2dp" />

            <!-- Lunch -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ½ï¸ Lunch"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#3498db"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/lunchItemsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No items selected"
                android:textSize="14sp"
                android:textColor="#34495e"
                android:layout_marginBottom="8dp"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:id="@+id/lunchDrinksText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No drinks selected"
                android:textSize="12sp"
                android:textColor="#7f8c8d"
                android:layout_marginBottom="16dp"
                android:lineSpacingExtra="2dp" />

            <!-- Dinner -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ› Dinner"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#27ae60"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/dinnerItemsText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No items selected"
                android:textSize="14sp"
                android:textColor="#34495e"
                android:layout_marginBottom="8dp"
                android:lineSpacingExtra="4dp" />

            <TextView
                android:id="@+id/dinnerDrinksText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No drinks selected"
                android:textSize="12sp"
                android:textColor="#7f8c8d"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- Order Status Section -->
        <LinearLayout
            android:id="@+id/orderStatusSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="20dp"
            android:elevation="2dp"
            android:layout_marginBottom="16dp"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meal Completion Status"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/orderDateText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status for Today"
                android:textSize="14sp"
                android:textColor="#7f8c8d"
                android:layout_marginBottom="16dp" />

            <CheckBox
                android:id="@+id/breakfastCompleteCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Breakfast Complete"
                android:textSize="16sp"
                android:textColor="#2c3e50"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/lunchCompleteCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lunch Complete"
                android:textSize="16sp"
                android:textColor="#2c3e50"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/dinnerCompleteCheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dinner Complete"
                android:textSize="16sp"
                android:textColor="#2c3e50" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/editMealPlanButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ“ Edit Meal Plan"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="#3498db"
                android:elevation="2dp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/editPatientButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="âœï¸ Edit Patient Info"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="#f39c12"
                android:elevation="2dp"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/deletePatientButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="ðŸ—‘ï¸ Delete Patient"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="#e74c3c"
                android:elevation="2dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>