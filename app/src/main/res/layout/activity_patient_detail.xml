<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f7fa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="👤 Patient Details"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1e3a8a"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View patient information and saved menus"
                android:textSize="16sp"
                android:textColor="#64748b"
                android:gravity="center" />

        </LinearLayout>

        <!-- Patient Information Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patient Information"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1e3a8a"
                android:layout_marginBottom="16dp" />

            <!-- Patient Name -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Name:"
                    android:textSize="14sp"
                    android:textColor="#64748b"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/patientNameText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Patient Name"
                    android:textSize="14sp"
                    android:textColor="#374151" />

            </LinearLayout>

            <!-- Location -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Location:"
                    android:textSize="14sp"
                    android:textColor="#64748b"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/locationText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Location"
                    android:textSize="14sp"
                    android:textColor="#374151" />

            </LinearLayout>

            <!-- Diet -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Diet:"
                    android:textSize="14sp"
                    android:textColor="#64748b"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dietText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Diet"
                    android:textSize="14sp"
                    android:textColor="#374151" />

            </LinearLayout>

            <!-- Fluid Restriction -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fluid Restriction:"
                    android:textSize="14sp"
                    android:textColor="#64748b"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fluidText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Fluid"
                    android:textSize="14sp"
                    android:textColor="#374151" />

            </LinearLayout>

            <!-- Texture Modifications -->
            <LinearLayout
                android:id="@+id/textureContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Texture Modifications:"
                    android:textSize="14sp"
                    android:textColor="#64748b"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textureText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Texture"
                    android:textSize="14sp"
                    android:textColor="#dc2626" />

            </LinearLayout>

        </LinearLayout>

        <!-- Saved Menus Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Saved Menus for Today"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1e3a8a"
                android:layout_marginBottom="16dp" />

            <!-- Saved Menus Container -->
            <LinearLayout
                android:id="@+id/savedMenusContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <!-- No Menus Message -->
            <TextView
                android:id="@+id/noMenusText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No saved menus for today.\nTap 'Plan Meals' to create a menu."
                android:textSize="16sp"
                android:textColor="#64748b"
                android:gravity="center"
                android:padding="24dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/editPatientButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="✏️ Edit Patient"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#dc2626"
                android:background="#fef2f2"
                android:elevation="2dp" />

            <Button
                android:id="@+id/planMealsButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="🍽️ Plan Meals"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#16a34a"
                android:background="#f0fdf4"
                android:elevation="2dp" />

        </LinearLayout>

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="← Back to Patient List"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="#dc2626"
            android:elevation="2dp" />

    </LinearLayout>

</ScrollView>