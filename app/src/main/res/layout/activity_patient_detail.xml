<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f7fa"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Patient Information Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/patientNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patient Name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1e3a8a"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/locationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="📍 Wing - Room"
                android:textSize="16sp"
                android:textColor="#374151"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/dietText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="🍽️ Diet"
                android:textSize="16sp"
                android:textColor="#374151"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/fluidText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="💧 Fluid Restriction"
                android:textSize="16sp"
                android:textColor="#374151"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/textureContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textureText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚙️ Texture Modifications"
                    android:textSize="16sp"
                    android:textColor="#374151" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/editPatientButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="✏️ Edit Patient"
                android:textSize="14sp"
                android:textColor="#1e3a8a"
                android:background="#f0f9ff" />

            <Button
                android:id="@+id/planMealsButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:text="🍽️ Plan Meals"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:background="#059669" />

        </LinearLayout>

        <!-- Refresh Orders Button -->
        <Button
            android:id="@+id/refreshOrdersButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="🔄 Refresh Orders"
            android:textSize="14sp"
            android:textColor="#374151"
            android:background="#e5e7eb"
            android:layout_marginBottom="16dp" />

        <!-- Existing Orders Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="📋 Existing Orders (Last 6 Days)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1e3a8a" />

                <TextView
                    android:id="@+id/existingOrdersCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 orders"
                    android:textSize="12sp"
                    android:textColor="#6b7280"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/existingOrdersContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/noExistingOrdersText"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="No existing orders found"
                android:textSize="16sp"
                android:textColor="#9ca3af"
                android:gravity="center"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Retired Orders Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="🗃️ Retired Orders (Older than 6 Days)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#7c2d12" />

                <TextView
                    android:id="@+id/retiredOrdersCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 orders"
                    android:textSize="12sp"
                    android:textColor="#6b7280"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/retiredOrdersContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                android:id="@+id/noRetiredOrdersText"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="No retired orders found"
                android:textSize="16sp"
                android:textColor="#9ca3af"
                android:gravity="center"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Back Button -->
        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="← Back to Patient List"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="#6b7280"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>