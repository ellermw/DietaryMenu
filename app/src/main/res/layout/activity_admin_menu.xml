<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8f9fa"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="20dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚙️ Admin Panel"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Users and Food Items"
            android:textSize="16sp"
            android:textColor="#7f8c8d"
            android:gravity="center" />

    </LinearLayout>

    <!-- Main Menu Container -->
    <LinearLayout
        android:id="@+id/mainMenuContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Stats Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="👥"
                    android:textSize="32sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/userCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Active Users"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#ecf0f1"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="🍽️"
                    android:textSize="32sp"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/itemCountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 Food Items"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50" />

            </LinearLayout>

        </LinearLayout>

        <!-- Menu Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="2dp">

            <Button
                android:id="@+id/usersMenuButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="👥 Manage Users"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="#3498db"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/itemsMenuButton"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:text="🍽️ Manage Food Items"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="#2ecc71"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/backToMenuButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="← Back to Main Menu"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:background="#95a5a6"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <!-- Users Management Container -->
    <LinearLayout
        android:id="@+id/usersContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Users Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <!-- Search Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/userSearchEditText"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Search users..."
                    android:padding="12dp"
                    android:background="@drawable/edit_text_background"
                    android:layout_marginEnd="12dp"
                    android:inputType="text" />

                <Button
                    android:id="@+id/addUserButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="+ Add User"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:background="#27ae60"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Users List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="2dp">

            <!-- List Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ecf0f1"
                android:padding="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="User"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Role"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Status"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:gravity="end" />

            </LinearLayout>

            <!-- Users ListView -->
            <ListView
                android:id="@+id/usersListView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="#ecf0f1"
                android:dividerHeight="1dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Items Management Container -->
    <LinearLayout
        android:id="@+id/itemsContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Items Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <!-- Search and Filter Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <Spinner
                    android:id="@+id/categoryFilterSpinner"
                    android:layout_width="140dp"
                    android:layout_height="48dp"
                    android:background="@drawable/edit_text_background"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/itemSearchEditText"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Search items..."
                    android:padding="12dp"
                    android:background="@drawable/edit_text_background"
                    android:layout_marginEnd="12dp"
                    android:inputType="text" />

                <Button
                    android:id="@+id/addItemButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="+ Add Item"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:background="#27ae60"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Items List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:elevation="2dp">

            <!-- List Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#ecf0f1"
                android:padding="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Item Name"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Category"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:gravity="center" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Size"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:gravity="end" />

            </LinearLayout>

            <!-- Items ListView -->
            <ListView
                android:id="@+id/itemsListView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="#ecf0f1"
                android:dividerHeight="1dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>