<?xml version="1.0" encoding="utf-8"?>
<!-- app/src/main/res/layout/item_existing_patient.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <!-- Main Patient Info Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Patient Name -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/patientNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patient Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#1e3a8a" />

            <TextView
                android:id="@+id/locationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="12sp"
                android:textColor="#64748b"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Diet Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/dietText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diet"
                android:textSize="14sp"
                android:textColor="#374151"
                android:gravity="center" />

            <TextView
                android:id="@+id/fluidText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fluid"
                android:textSize="12sp"
                android:textColor="#64748b"
                android:gravity="center"
                android:layout_marginTop="2dp" />

        </LinearLayout>

        <!-- Status/Action Indicator -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Details â†’"
                android:textSize="12sp"
                android:textColor="#1e3a8a"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- Texture Modifications Row (optional) -->
    <TextView
        android:id="@+id/textureText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Texture Modifications"
        android:textSize="12sp"
        android:textColor="#dc2626"
        android:background="#fef2f2"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

</LinearLayout>