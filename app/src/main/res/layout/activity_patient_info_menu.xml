<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f7fa"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="24dp"
        android:layout_marginBottom="20dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="👤 Patient Information"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1e3a8a"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose how you'd like to manage patient information"
            android:textSize="16sp"
            android:textColor="#64748b"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textSize="14sp"
            android:textColor="#9ca3af"
            android:gravity="center" />

    </LinearLayout>

    <!-- Menu Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/newPatientButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="👤➕ New Patient\n\nAdd a new patient to the system"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1e3a8a"
            android:background="#f0f9ff"
            android:layout_marginBottom="16dp"
            android:elevation="4dp" />

        <Button
            android:id="@+id/existingPatientButton"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="👥 Existing Patients\n\nView and manage existing patients"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#059669"
            android:background="#f0fdf4"
            android:layout_marginBottom="16dp"
            android:elevation="4dp" />

    </LinearLayout>

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="← Back to Main Menu"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="#6b7280" />

</LinearLayout>