<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This is your first login. You must change your password to continue."
        android:textSize="14sp"
        android:textColor="#e74c3c"
        android:background="#fdf2f2"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Password *"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#374151"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/newPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter new password (min 6 characters)"
        android:background="?android:attr/editTextBackground"
        android:padding="12dp"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:layout_marginBottom="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm New Password *"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#374151"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/confirmPasswordEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Confirm new password"
        android:background="?android:attr/editTextBackground"
        android:padding="12dp"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:layout_marginBottom="12dp" />

    <CheckBox
        android:id="@+id/showNewPasswordCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show passwords"
        android:textSize="14sp"
        android:textColor="#374151" />

</LinearLayout>