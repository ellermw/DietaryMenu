<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f7fa"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="20dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🗃️ Retired Orders"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1e3a8a"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Orders older than 6 days are automatically retired"
            android:textSize="14sp"
            android:textColor="#64748b"
            android:gravity="center" />

    </LinearLayout>

    <!-- Orders Count and Refresh -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/retiredOrdersCountText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0 retired orders"
            android:textSize="14sp"
            android:textColor="#6b7280"
            android:paddingStart="4dp"
            android:gravity="center_vertical" />

        <Button
            android:id="@+id/refreshButton"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:text="Refresh"
            android:textSize="12sp"
            android:background="#3b82f6"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <!-- Retired Orders List -->
    <ListView
        android:id="@+id/retiredOrdersListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#e5e7eb"
        android:dividerHeight="1dp"
        android:background="@android:color/white" />

    <!-- No Retired Orders Message -->
    <TextView
        android:id="@+id/noRetiredOrdersText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="No retired orders found"
        android:textSize="16sp"
        android:textColor="#9ca3af"
        android:gravity="center"
        android:visibility="gone" />

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="← Back to Main Menu"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="#6b7280"
        android:layout_marginTop="16dp" />

</LinearLayout>