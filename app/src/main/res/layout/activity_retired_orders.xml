<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f8fafc">

    <!-- Title Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“… Retired Orders Archive"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1e3a8a"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View completed orders from previous days"
            android:textSize="16sp"
            android:textColor="#64748b"
            android:gravity="center" />

    </LinearLayout>

    <!-- Date Selection Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp">

        <TextView
            android:id="@+id/selectedDateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Viewing orders for: [Date]"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/datePickerButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ðŸ“… Select Date"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="#3b82f6"
            android:elevation="2dp" />

    </LinearLayout>

    <!-- Orders List Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="2dp">

        <!-- Column Headers -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:paddingBottom="8dp"
            android:background="#f1f5f9">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Patient"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:padding="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Location"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:gravity="center"
                android:padding="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Status"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:gravity="end"
                android:padding="8dp" />

        </LinearLayout>

        <!-- Orders ListView -->
        <ListView
            android:id="@+id/retiredOrdersListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="#ecf0f1"
            android:dividerHeight="1dp"
            android:scrollbars="vertical"
            android:choiceMode="multipleChoice" />

        <!-- No Orders Message -->
        <TextView
            android:id="@+id/noRetiredOrdersText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="ðŸ“‹ No orders found for selected date.\n\nTry choosing a different date from the calendar."
            android:textSize="18sp"
            android:textColor="#7f8c8d"
            android:gravity="center"
            android:visibility="gone"
            android:padding="32dp" />

    </LinearLayout>

    <!-- Print Buttons Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/printAllButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="ðŸ–¨ï¸ Print All"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="#16a34a"
            android:enabled="false" />

        <Button
            android:id="@+id/printSelectedButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="ðŸ–¨ï¸ Print Selected"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:background="#dc2626"
            android:enabled="false" />

    </LinearLayout>

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:text="â† Back to Main Menu"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="#6b7280" />

</LinearLayout>