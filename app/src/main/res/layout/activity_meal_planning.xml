<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f9fa">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ½ï¸ Meal Planning"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/patientInfoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patient information will appear here"
                android:textSize="14sp"
                android:textColor="#7f8c8d"
                android:gravity="center"
                android:background="#ecf0f1"
                android:padding="12dp" />

        </LinearLayout>

        <!-- Breakfast Section -->
        <LinearLayout
            android:id="@+id/breakfastSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸŒ… Breakfast"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#f39c12" />

                <CheckBox
                    android:id="@+id/breakfastNPOCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NPO"
                    android:textSize="16sp"
                    android:textColor="#e74c3c"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/breakfastItemsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fff8e1"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Breakfast items will appear here"
                    android:textSize="14sp"
                    android:textColor="#7f8c8d"
                    android:gravity="center"
                    android:padding="16dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Lunch Section -->
        <LinearLayout
            android:id="@+id/lunchSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸŒž Lunch"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#e67e22" />

                <CheckBox
                    android:id="@+id/lunchNPOCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NPO"
                    android:textSize="16sp"
                    android:textColor="#e74c3c"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lunchItemsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fef9e7"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lunch items will appear here"
                    android:textSize="14sp"
                    android:textColor="#7f8c8d"
                    android:gravity="center"
                    android:padding="16dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Dinner Section -->
        <LinearLayout
            android:id="@+id/dinnerSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸŒ™ Dinner"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#8e44ad" />

                <CheckBox
                    android:id="@+id/dinnerNPOCheckbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NPO"
                    android:textSize="16sp"
                    android:textColor="#e74c3c"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dinnerItemsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#f4f0ff"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dinner items will appear here"
                    android:textSize="14sp"
                    android:textColor="#7f8c8d"
                    android:gravity="center"
                    android:padding="16dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/backButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="â† Back"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:background="#95a5a6"
                android:layout_marginEnd="8dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/saveOrderButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="2"
                android:text="ðŸ’¾ Save Order"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="#95a5a6"
                android:layout_marginStart="8dp"
                android:elevation="2dp"
                android:enabled="false" />

        </LinearLayout>

        <!-- Instructions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp"
            android:elevation="2dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â„¹ï¸ Instructions"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â€¢ Check NPO for meals that should be nothing by mouth\nâ€¢ Clear Liquid diets have predefined items and cannot be modified\nâ€¢ All meals must be completed or marked as NPO to save the order"
                android:textSize="14sp"
                android:textColor="#7f8c8d"
                android:lineSpacingExtra="4dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>