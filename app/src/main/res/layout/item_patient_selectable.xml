<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical">

    <!-- Selection Checkbox -->
    <CheckBox
        android:id="@+id/selectionCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:focusable="false"
        android:clickable="false" />

    <!-- Patient Information -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Patient Name -->
        <TextView
            android:id="@+id/patientNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Patient Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Location Info -->
        <TextView
            android:id="@+id/locationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Wing - Room"
            android:textSize="14sp"
            android:textColor="#7f8c8d"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Diet Info -->
        <TextView
            android:id="@+id/dietText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ½ï¸ Diet Type"
            android:textSize="14sp"
            android:textColor="#27ae60"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:ellipsize="end" />

        <!-- Status Info -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â³ Status"
            android:textSize="12sp"
            android:textColor="#e67e22"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Action Arrow -->
    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@android:drawable/ic_menu_more"
        android:layout_marginStart="8dp"
        android:contentDescription="View details"
        android:tint="#bdc3c7" />

</LinearLayout>