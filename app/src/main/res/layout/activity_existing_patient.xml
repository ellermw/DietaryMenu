<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f8fafc">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="📋 Completed Orders"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1e3a8a"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Search Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔍 Search Patients:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/searchPatientEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Search by name, wing, or room..."
                android:inputType="text"
                android:background="@android:drawable/edit_text"
                android:padding="12dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/clearSearchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="#6c757d"
                android:minWidth="60dp"
                android:padding="8dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Date Filter Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📅 Filter by Day:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/dateFilterSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:padding="12dp" />

    </LinearLayout>

    <!-- Instructions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="💡 Tap patient to edit • Long press to delete"
        android:textSize="14sp"
        android:textColor="#7f8c8d"
        android:textStyle="italic"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:background="#f1f5f9"
        android:padding="8dp" />

    <!-- Orders List -->
    <ListView
        android:id="@+id/completedOrdersListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#ecf0f1"
        android:dividerHeight="1dp"
        android:scrollbars="vertical"
        android:background="@android:color/white"
        android:elevation="1dp" />

    <!-- No Orders Message -->
    <TextView
        android:id="@+id/noOrdersText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="📋 No completed orders found.\n\nTry selecting a different date or complete some pending orders."
        android:textSize="18sp"
        android:textColor="#7f8c8d"
        android:gravity="center"
        android:visibility="gone"
        android:padding="32dp"
        android:background="@android:color/white"
        android:elevation="1dp" />

</LinearLayout>