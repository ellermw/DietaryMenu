<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8f9fa"
    android:padding="16dp">

    <!-- Filter Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="2dp"
        android:layout_marginBottom="16dp">

        <!-- FIXED: Day Filter with proper ordering -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter by Day"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/dayFilterSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="?android:attr/editTextBackground"
            android:layout_marginBottom="12dp" />

        <!-- Search Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search Patients"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="🔍 Search by name, wing, or room..."
            android:background="?android:attr/editTextBackground"
            android:padding="12dp"
            android:textSize="16sp"
            android:importantForAutofill="no" />

    </LinearLayout>

    <!-- FEATURE: Bulk Operations Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:padding="12dp"
        android:elevation="1dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">

        <!-- Select All Checkbox -->
        <CheckBox
            android:id="@+id/selectAllCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select All"
            android:textSize="14sp"
            android:textColor="#2c3e50"
            android:layout_marginEnd="16dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- FEATURE: Print Menus Button -->
            <Button
                android:id="@+id/printMenusButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="🖨️ Print"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="#27ae60"
                android:elevation="1dp"
                android:layout_marginEnd="8dp"
                android:paddingHorizontal="12dp" />

            <!-- FEATURE: Delete Selected Button -->
            <Button
                android:id="@+id/deleteSelectedButton"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="🗑️ Delete"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="#e74c3c"
                android:elevation="1dp"
                android:paddingHorizontal="12dp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <!-- Patient Count Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ecf0f1"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- FIXED: Changed heading from "Completed Orders" to "Active Patients" -->
        <TextView
            android:id="@+id/patientsCountText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/active_patients"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2c3e50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to view details"
            android:textSize="12sp"
            android:textColor="#7f8c8d" />

    </LinearLayout>

    <!-- Patient List -->
    <ListView
        android:id="@+id/patientsListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:divider="#ecf0f1"
        android:dividerHeight="1dp"
        android:choiceMode="none"
        android:scrollbars="vertical"
        android:fastScrollEnabled="true" />

    <!-- Empty State Message -->
    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@android:color/white"
        android:padding="32dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📋"
            android:textSize="48sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Active Patients Found"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No patients with orders found for the selected day.\nTry selecting a different day or add new patients."
            android:textSize="14sp"
            android:textColor="#7f8c8d"
            android:textAlignment="center"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

</LinearLayout>