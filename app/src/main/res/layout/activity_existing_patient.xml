<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f8fafc">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“‹ Completed Orders"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1e3a8a"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Date Filter -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ“… Filter by Day:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#2c3e50"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/dateFilterSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="#f1f5f9"
        android:padding="12dp" />

    <!-- Orders List -->
    <ListView
        android:id="@+id/completedOrdersListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#ecf0f1"
        android:dividerHeight="1dp"
        android:scrollbars="vertical" />

    <!-- No Orders Message -->
    <TextView
        android:id="@+id/noOrdersText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="ðŸ“‹ No completed orders found.\n\nTry selecting a different date or complete some pending orders."
        android:textSize="18sp"
        android:textColor="#7f8c8d"
        android:gravity="center"
        android:visibility="gone"
        android:padding="32dp" />

</LinearLayout>