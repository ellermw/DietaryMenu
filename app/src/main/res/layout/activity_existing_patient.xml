<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8fafc">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Search and Filter Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:elevation="2dp">

        <!-- Search Input -->
        <EditText
            android:id="@+id/searchInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="ðŸ” Search patients by name, location, or diet..."
            android:padding="12dp"
            android:background="@drawable/search_input_background"
            android:textSize="16sp"
            android:inputType="text"
            android:maxLines="1" />

        <!-- Day Filter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Day:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp" />

            <Spinner
                android:id="@+id/dayFilterSpinner"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <!-- Patients Count -->
    <TextView
        android:id="@+id/patientsCountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0 patients"
        android:textSize="14sp"
        android:textColor="#7f8c8d"
        android:padding="16dp"
        android:background="#ecf0f1" />

    <!-- Patients List -->
    <ListView
        android:id="@+id/patientsListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#e0e0e0"
        android:dividerHeight="1dp"
        android:background="@android:color/white" />

    <!-- Bulk Operations Container -->
    <LinearLayout
        android:id="@+id/bulkOperationsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:padding="16dp"
        android:elevation="8dp"
        android:visibility="gone">

        <!-- Select All Checkbox -->
        <CheckBox
            android:id="@+id/selectAllCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select All"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- View Patient Details Button (NEW) -->
        <Button
            android:id="@+id/viewPatientDetailsButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="ðŸ‘ï¸ View Patient Details"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="#2196F3"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- Action Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/printMenusButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Print Menus"
                android:textSize="14sp"
                android:background="#4CAF50"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/deleteSelectedButton"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:text="Delete Selected"
                android:textSize="14sp"
                android:background="#f44336"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>