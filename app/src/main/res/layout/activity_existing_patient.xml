<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f7fa"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="20dp"
        android:layout_marginBottom="16dp"
        android:elevation="4dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="👥 Existing Patients"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1e3a8a"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search by first or last name, or browse all patients"
            android:textSize="14sp"
            android:textColor="#64748b"
            android:gravity="center" />

    </LinearLayout>

    <!-- Search Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Search patients..."
            android:background="?android:attr/editTextBackground"
            android:padding="12dp"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/clearSearchButton"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Clear"
            android:textSize="12sp"
            android:background="#e5e7eb"
            android:textColor="#374151" />

    </LinearLayout>

    <!-- Patient Count -->
    <TextView
        android:id="@+id/patientCountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0 patients found"
        android:textSize="14sp"
        android:textColor="#6b7280"
        android:layout_marginBottom="8dp"
        android:paddingStart="4dp"
        android:visibility="gone" />

    <!-- Patient List -->
    <ListView
        android:id="@+id/patientsListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#e5e7eb"
        android:dividerHeight="1dp"
        android:background="@android:color/white" />

    <!-- No Patients Message -->
    <TextView
        android:id="@+id/noPatientsText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="No patients found"
        android:textSize="16sp"
        android:textColor="#9ca3af"
        android:gravity="center"
        android:visibility="gone" />

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="← Back to Patient Info Menu"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="#6b7280"
        android:layout_marginTop="16dp" />

</LinearLayout>