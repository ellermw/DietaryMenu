<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f7fa">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="20dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="📋 Existing Patients"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1e3a8a"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View and manage existing patient information"
            android:textSize="16sp"
            android:textColor="#64748b"
            android:gravity="center" />

    </LinearLayout>

    <!-- Search and Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp">

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Search patients..."
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginEnd="8dp"
            android:inputType="text"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:drawablePadding="8dp" />

        <Button
            android:id="@+id/refreshButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="🔄"
            android:textSize="16sp"
            android:textColor="#1e3a8a"
            android:background="#f0f9ff"
            android:layout_marginStart="8dp"
            android:elevation="2dp" />

    </LinearLayout>

    <!-- Patients List -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:elevation="2dp">

        <!-- List Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#f8fafc"
            android:padding="12dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Patient"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1e3a8a" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Location"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1e3a8a"
                android:gravity="center" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Diet"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#1e3a8a"
                android:gravity="end" />

        </LinearLayout>

        <!-- Patients ListView -->
        <ListView
            android:id="@+id/patientsListView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="#e5e7eb"
            android:dividerHeight="1dp"
            android:scrollbars="vertical" />

        <!-- No Patients Message -->
        <TextView
            android:id="@+id/noPatientsText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="No patients found.\nAdd a new patient to get started!"
            android:textSize="18sp"
            android:textColor="#64748b"
            android:gravity="center"
            android:visibility="gone"
            android:padding="32dp" />

    </LinearLayout>

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="← Back to Patient Menu"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="#dc2626"
        android:layout_margin="16dp"
        android:elevation="2dp" />

</LinearLayout>