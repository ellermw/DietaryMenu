<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Item Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Name:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/itemNameInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter item name"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:inputType="text"
            android:layout_marginBottom="16dp" />

        <!-- Category -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Category:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/itemCategorySpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginBottom="16dp" />

        <!-- Size (Optional) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Size (ml) - Optional:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/itemSizeInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter size in milliliters"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:inputType="number"
            android:layout_marginBottom="16dp" />

        <!-- Checkboxes Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Item Properties:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/adaFriendlyCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ADA Friendly"
            android:textSize="14sp"
            android:checked="true"
            android:layout_marginBottom="8dp" />

        <CheckBox
            android:id="@+id/sodaCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Is Soda"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Info Text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• ADA Friendly items will be available for diabetic patients\n• Soda items are tracked separately for fluid restrictions\n• Size is used for fluid calculation (leave blank if not applicable)"
            android:textSize="12sp"
            android:textColor="#7f8c8d"
            android:background="#f8f9fa"
            android:padding="8dp" />

    </LinearLayout>

</ScrollView>