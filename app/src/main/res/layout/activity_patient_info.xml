<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patient Information Management"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#2c3e50"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Search Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search Patients"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#2c3e50"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/searchInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Search by first name, last name, wing, or room..."
        android:background="@android:drawable/edit_text"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:inputType="text"
        android:drawableStart="@android:drawable/ic_menu_search"
        android:drawablePadding="8dp"
        android:importantForAutofill="no"
        android:autofillHints="" />

    <!-- Patient List -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Patients"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#2c3e50"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/patientsListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:divider="#ecf0f1"
        android:dividerHeight="1dp"
        android:layout_marginBottom="16dp" />

    <!-- Patient Details Form -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patient Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="16dp" />

            <!-- Split Patient Name Fields -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patient Name"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <EditText
                    android:id="@+id/patientFirstNameInput"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="First Name"
                    android:background="@android:drawable/edit_text"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp"
                    android:inputType="textPersonName|textCapWords"
                    android:importantForAutofill="no"
                    android:autofillHints="" />

                <EditText
                    android:id="@+id/patientLastNameInput"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:hint="Last Name"
                    android:background="@android:drawable/edit_text"
                    android:padding="12dp"
                    android:layout_marginStart="8dp"
                    android:inputType="textPersonName|textCapWords"
                    android:importantForAutofill="no"
                    android:autofillHints="" />

            </LinearLayout>

            <!-- Wing -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wing"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/wingSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="16dp" />

            <!-- Room Number -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Room Number"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/roomNumberSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="16dp" />

            <!-- Diet -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diet"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/dietSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="16dp" />

            <!-- Fluid Restriction -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fluid Restriction"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/fluidRestrictionSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="16dp" />

            <!-- Texture Modifications -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texture Modifications"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <CheckBox
                    android:id="@+id/mechanicalGroundCB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mechanical Ground"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/mechanicalChoppedCB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mechanical Chopped"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/biteSizeCB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bite Size"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/breadOKCB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bread OK"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/adaFriendlyCB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ADA Friendly"
                    android:textSize="14sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/newPatientButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="New Patient"
            android:textSize="14sp"
            android:background="#3498db"
            android:textColor="@android:color/white"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/savePatientButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Save Changes"
            android:textSize="14sp"
            android:background="#27ae60"
            android:textColor="@android:color/white"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:enabled="false" />

        <Button
            android:id="@+id/deletePatientButton"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Delete"
            android:textSize="14sp"
            android:background="#e74c3c"
            android:textColor="@android:color/white"
            android:layout_marginStart="4dp"
            android:enabled="false" />

    </LinearLayout>

    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="← Back to Main Menu"
        android:textSize="16sp"
        android:background="#34495e"
        android:textColor="@android:color/white"
        android:layout_marginTop="8dp" />

</LinearLayout>