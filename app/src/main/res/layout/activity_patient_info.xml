<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f8fafc">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="👥 Manage Patients"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#1e3a8a"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Search Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:layout_marginBottom="12dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔍 Search Patients:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/searchInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search by name, wing, or room..."
            android:inputType="text"
            android:background="@android:drawable/edit_text"
            android:padding="12dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/patientsCountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patients: 0 of 0"
            android:textSize="14sp"
            android:textColor="#7f8c8d"
            android:textStyle="italic" />

    </LinearLayout>

    <!-- Patients List -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="📋 Select a patient to edit:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#2c3e50"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/patientsListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:divider="#ecf0f1"
        android:dividerHeight="1dp"
        android:scrollbars="vertical"
        android:layout_marginBottom="16dp"
        android:elevation="1dp" />

    <!-- Patient Edit Section (Initially Hidden) -->
    <ScrollView
        android:id="@+id/editPatientSection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Edit Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="✏️ Edit Patient Information"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#1e3a8a"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:background="#e3f2fd"
                android:padding="12dp" />

            <!-- Basic Information Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="👤 Basic Information"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:layout_marginBottom="12dp" />

                <!-- First Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="First Name *"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/editFirstNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="@android:drawable/edit_text"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp" />

                <!-- Last Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Name *"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:layout_marginBottom="4dp" />

                <EditText
                    android:id="@+id/editLastNameInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:background="@android:drawable/edit_text"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp" />

                <!-- Wing -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wing *"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/editWingSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp" />

                <!-- Room -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Room Number *"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/editRoomSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp" />

            </LinearLayout>

            <!-- Diet Information Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🍽️ Diet Information"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:layout_marginBottom="12dp" />

                <!-- Diet -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Diet Type *"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/editDietSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:padding="12dp"
                    android:layout_marginBottom="12dp" />

                <!-- ADA Toggle -->
                <CheckBox
                    android:id="@+id/editAdaToggle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ADA Friendly (Sugar-free options)"
                    android:textSize="16sp"
                    android:textColor="#2c3e50"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:layout_marginBottom="12dp"
                    android:background="#e3f2fd"
                    android:padding="8dp" />

                <!-- Fluid Restriction -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fluid Restriction"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:layout_marginBottom="4dp" />

                <Spinner
                    android:id="@+id/editFluidRestrictionSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/btn_dropdown"
                    android:padding="12dp" />

            </LinearLayout>

            <!-- Texture Modifications Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔧 Texture Modifications"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:layout_marginBottom="12dp" />

                <CheckBox
                    android:id="@+id/editPureedCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pureed"
                    android:textSize="14sp"
                    android:padding="4dp" />

                <CheckBox
                    android:id="@+id/editChoppedCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chopped"
                    android:textSize="14sp"
                    android:padding="4dp" />

                <CheckBox
                    android:id="@+id/editSoftCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Soft"
                    android:textSize="14sp"
                    android:padding="4dp" />

                <CheckBox
                    android:id="@+id/editRegularCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Regular"
                    android:textSize="14sp"
                    android:padding="4dp" />

            </LinearLayout>

            <!-- Meal Completion Status Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:elevation="2dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="✅ Meal Completion Status"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2c3e50"
                    android:layout_marginBottom="12dp" />

                <CheckBox
                    android:id="@+id/editBreakfastCompleteCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Breakfast Complete"
                    android:textSize="14sp"
                    android:padding="4dp" />

                <CheckBox
                    android:id="@+id/editLunchCompleteCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lunch Complete"
                    android:textSize="14sp"
                    android:padding="4dp" />

                <CheckBox
                    android:id="@+id/editDinnerCompleteCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dinner Complete"
                    android:textSize="14sp"
                    android:padding="4dp" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <!-- Top Row: Edit Meals -->
                <Button
                    android:id="@+id/editMealsButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="🍽️ Edit Meal Selections"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="#17a2b8"
                    android:layout_marginBottom="8dp" />

                <!-- Bottom Row: Save, Cancel, Delete -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/saveChangesButton"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="💾 Save"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="#28a745" />

                    <Button
                        android:id="@+id/cancelEditButton"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:text="❌ Cancel"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="#6c757d" />

                    <Button
                        android:id="@+id/deletePatientButton"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="🗑️ Delete"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="#dc3545" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Back Button (Always Visible) -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="← Back to Menu"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="#6c757d"
        android:layout_marginTop="8dp" />

</LinearLayout>