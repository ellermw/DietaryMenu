<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f8fafc">

    <!-- Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⏳ Pending Orders"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#dc2626"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click on a patient to plan their meals"
        android:textSize="16sp"
        android:textColor="#64748b"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Column Headers -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp"
        android:paddingBottom="8dp"
        android:background="#f1f5f9">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Patient"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:padding="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Location"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:gravity="center"
            android:padding="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Status"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:gravity="end"
            android:padding="8dp" />

    </LinearLayout>

    <!-- Orders ListView -->
    <ListView
        android:id="@+id/pendingOrdersListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="#ecf0f1"
        android:dividerHeight="1dp"
        android:scrollbars="vertical" />

    <!-- No Orders Message -->
    <TextView
        android:id="@+id/noPendingOrdersText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="✅ No pending orders!\nAll patients have completed meal orders."
        android:textSize="18sp"
        android:textColor="#7f8c8d"
        android:gravity="center"
        android:visibility="gone"
        android:padding="32dp" />

</LinearLayout>