<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password Requirements"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#2c3e50"
        android:layout_marginBottom="16dp" />

    <CheckBox
        android:id="@+id/requireUppercaseCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Require uppercase letter (A-Z)"
        android:layout_marginBottom="8dp" />

    <CheckBox
        android:id="@+id/requireLowercaseCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Require lowercase letter (a-z)"
        android:layout_marginBottom="8dp" />

    <CheckBox
        android:id="@+id/requireNumberCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Require number (0-9)"
        android:layout_marginBottom="8dp" />

    <CheckBox
        android:id="@+id/requireSpecialCheckBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Require special character (!@#$%)"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Minimum Password Length"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/minLengthEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="number"
        android:hint="e.g., 8"
        android:background="@drawable/edit_text_background"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password Expiration (days)"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/expirationDaysEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:inputType="number"
        android:hint="e.g., 90 (0 for no expiration)"
        android:background="@drawable/edit_text_background"
        android:padding="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note: These settings will apply to all new passwords"
        android:textSize="12sp"
        android:textColor="#999999"
        android:layout_marginTop="16dp" />

</LinearLayout>