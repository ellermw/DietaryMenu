<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f8fafc">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp">

            <!-- Logo Section - Updated with Hospital Logo -->
            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="32dp"
                android:elevation="4dp"
                android:padding="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/hospital_logo"
                    android:scaleType="centerInside"
                    android:contentDescription="McAlester Regional Health Center Logo" />

            </LinearLayout>

            <!-- App Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hospital Dietary Management"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#2c3e50"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <!-- Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dietary Management Application"
                android:textSize="16sp"
                android:textColor="#7f8c8d"
                android:layout_marginBottom="40dp" />

            <!-- Login Form -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="24dp"
                android:elevation="2dp">

                <!-- Username Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textSize="14sp"
                    android:textColor="#2c3e50"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/usernameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Enter your username"
                    android:background="@drawable/edit_text_background"
                    android:paddingLeft="40dp"
                    android:paddingRight="16dp"
                    android:drawableLeft="@drawable/ic_person"
                    android:drawablePadding="12dp"
                    android:textSize="16sp"
                    android:inputType="text"
                    android:layout_marginBottom="20dp" />

                <!-- Password Field -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textSize="14sp"
                    android:textColor="#2c3e50"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Enter your password"
                    android:background="@drawable/edit_text_background"
                    android:paddingLeft="40dp"
                    android:paddingRight="16dp"
                    android:drawableLeft="@drawable/ic_lock"
                    android:drawablePadding="12dp"
                    android:textSize="16sp"
                    android:inputType="textPassword"
                    android:layout_marginBottom="12dp" />

                <!-- Show Password Checkbox -->
                <CheckBox
                    android:id="@+id/showPasswordCheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Show password"
                    android:textSize="14sp"
                    android:textColor="#7f8c8d"
                    android:layout_marginBottom="24dp" />

                <!-- Sign In Button -->
                <Button
                    android:id="@+id/signInButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="SIGN IN"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/button_primary"
                    android:elevation="4dp" />

            </LinearLayout>

            <!-- Version and Copyright -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Version 0.0.30"
                    android:textSize="12sp"
                    android:textColor="#95a5a6"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â© 2024 Hospital Dietary Management"
                    android:textSize="12sp"
                    android:textColor="#95a5a6" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>