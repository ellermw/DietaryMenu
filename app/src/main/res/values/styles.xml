<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Add spinner style to fix dropdown issues -->
        <item name="android:spinnerStyle">@style/SpinnerStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItemStyle</item>
    </style>

    <!-- Theme without action bar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- AppBar Overlay -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Popup Overlay -->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Header Card Style -->
    <style name="HeaderCard">
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- App Title Style -->
    <style name="AppTitle">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2c3e50</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Welcome Text Style -->
    <style name="WelcomeText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#7f8c8d</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Card Section Style -->
    <style name="CardSection">
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- Section Title Style -->
    <style name="SectionTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2c3e50</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- Base Main Menu Button Style -->
    <style name="MainMenuButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Primary Button (Blue) -->
    <style name="MainMenuButton.Primary">
        <item name="android:background">@drawable/button_rounded_blue</item>
    </style>

    <!-- Purple Button -->
    <style name="MainMenuButton.Purple">
        <item name="android:background">@drawable/button_rounded_blue</item>
    </style>

    <!-- Green Button -->
    <style name="MainMenuButton.Green">
        <item name="android:background">@drawable/button_rounded_blue</item>
    </style>

    <!-- Orange Button -->
    <style name="MainMenuButton.Orange">
        <item name="android:background">@drawable/button_rounded_blue</item>
    </style>

    <!-- Pink Button -->
    <style name="MainMenuButton.Pink">
        <item name="android:background">@drawable/button_rounded_blue</item>
    </style>

    <!-- Gray Button -->
    <style name="MainMenuButton.Gray">
        <item name="android:background">@drawable/button_rounded_blue</item>
    </style>

    <!-- Side by Side Button Style -->
    <style name="MainMenuButton.SideBySide">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:background">@drawable/button_rounded_blue</item>
    </style>

    <!-- Custom Spinner Style -->
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:minHeight">48dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Custom Spinner Dropdown Item Style -->
    <style name="SpinnerDropDownItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Custom Alert Dialog Style -->
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <!-- Full Screen Dialog Style -->
    <style name="FullScreenDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <!-- Standard Button Styles -->
    <style name="PrimaryButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="SecondaryButton" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">48dp</item>
    </style>

    <!-- Red Button -->
    <style name="MainMenuButton.Red">
        <item name="android:background">@drawable/button_logout</item>
    </style>

    <!-- Logout Button Style -->
    <style name="LogoutButton">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_logout</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- Dialog Styles -->
    <style name="DialogContent">
        <item name="android:padding">16dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="DialogLabel">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#2c3e50</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <!-- Custom EditText Style -->
    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@android:drawable/edit_text</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
</resources>