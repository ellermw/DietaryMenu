<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme - Material Design with Samsung One UI compatibility -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryVariant">#1976D2</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">#FF5722</item>
        <item name="colorSecondaryVariant">#E64A19</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Background colors -->
        <item name="android:colorBackground">#f8f9fa</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#2c3e50</item>
        <!-- Status bar -->
        <item name="android:statusBarColor">#1976D2</item>
        <item name="android:navigationBarColor">#1976D2</item>
        <!-- Action bar -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <!-- Corner radius for Material components -->
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
        <!-- Dialog theme override for consistency across all devices -->
        <item name="alertDialogTheme">@style/CustomAlertDialog</item>
        <!-- Edit text theme for consistency -->
        <item name="editTextStyle">@style/CustomEditText</item>
        <!-- Ensure proper text contrast -->
        <item name="android:textColorPrimary">#2c3e50</item>
        <item name="android:textColorSecondary">#7f8c8d</item>
    </style>

    <!-- Theme variant for activities that use their own Toolbar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Shape appearance for medium components -->
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Enhanced Alert Dialog Theme for Samsung One UI compatibility -->
    <style name="CustomAlertDialog" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <!-- Explicit background and surface colors -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorSurface">@android:color/white</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">#2c3e50</item>
        <item name="android:textColorSecondary">#7f8c8d</item>
        <!-- Button colors -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorAccent">#2196F3</item>
    </style>

    <!-- Custom EditText Style -->
    <style name="CustomEditText" parent="Widget.MaterialComponents.TextInputEditText.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#2c3e50</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColorHint">#7f8c8d</item>
    </style>

    <!-- Main Menu Button base style -->
    <style name="MainMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="MainMenuButton.Primary">
        <item name="android:background">@drawable/button_primary</item>
    </style>

    <style name="MainMenuButton.Green">
        <item name="android:background">@drawable/button_green</item>
    </style>

    <style name="MainMenuButton.Orange">
        <item name="android:background">@drawable/button_orange</item>
    </style>

    <style name="MainMenuButton.Gray">
        <item name="android:background">@drawable/button_gray</item>
    </style>

    <style name="MainMenuButton.Purple">
        <item name="android:background">@drawable/button_purple</item>
    </style>

    <style name="MainMenuButton.Pink">
        <item name="android:background">@drawable/button_pink</item>
    </style>

    <!-- Side by side button style -->
    <style name="MainMenuButton.SideBySide">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Logout button style -->
    <style name="LogoutButton">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_logout</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Card style for sections -->
    <style name="CardSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/card_background</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <!-- Section title style -->
    <style name="SectionTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2c3e50</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Samsung-compatible dialog content style -->
    <style name="DialogContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">24dp</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <!-- Samsung-compatible text label style -->
    <style name="DialogLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2c3e50</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Header Card Style -->
    <style name="HeaderCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- App Title Style -->
    <style name="AppTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2c3e50</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Welcome Text Style -->
    <style name="WelcomeText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#7f8c8d</item>
    </style>

    <!-- Form Input Style -->
    <style name="FormInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@android:drawable/editbox_background</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- Form Label Style -->
    <style name="FormLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#7f8c8d</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <!-- Status Text Style -->
    <style name="StatusText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#3498db</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <!-- Empty State Text Style -->
    <style name="EmptyStateText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#7f8c8d</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Toolbar Title Style -->
    <style name="ToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Dialog Style -->
    <style name="AppDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">#3498db</item>
        <item name="colorPrimaryDark">#2980b9</item>
        <item name="colorAccent">#27ae60</item>
    </style>

    <!-- Spinner Style -->
    <style name="SpinnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@android:drawable/btn_dropdown</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- Card View Style -->
    <style name="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
    </style>

</resources>