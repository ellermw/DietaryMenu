<?xml version="1.0" encoding="utf-8"?>
<!-- app/src/main/res/values/styles.xml -->
<resources>
    <!-- Base Application Theme -->
    <style name="Theme.DietaryMenu" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryDark">@color/hospital_blue</item>
        <item name="colorAccent">@color/primary_teal</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_blue</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background_light</item>
    </style>

    <!-- Header Text Style -->
    <style name="HeaderTextStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Subheader Text Style -->
    <style name="SubheaderTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Label Text Style -->
    <style name="LabelTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Primary Button Style -->
    <style name="PrimaryButtonStyle">
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/primary_blue</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Secondary Button Style -->
    <style name="SecondaryButtonStyle">
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Success Button Style -->
    <style name="SuccessButtonStyle">
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/success_green</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Warning Button Style -->
    <style name="WarningButtonStyle">
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/warning_orange</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Danger Button Style -->
    <style name="DangerButtonStyle">
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/error_red</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- List Item Style -->
    <style name="ListItemStyle">
        <item name="android:background">@color/card_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Divider Style -->
    <style name="DividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_light</item>
    </style>

    <!-- Checkbox Style -->
    <style name="CheckboxStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>