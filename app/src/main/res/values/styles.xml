<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme - Material Design -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryVariant">#1976D2</item>
        <item name="colorOnPrimary">#FFFFFF</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">#FF5722</item>
        <item name="colorSecondaryVariant">#E64A19</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Background colors -->
        <item name="android:colorBackground">#f8f9fa</item>
        <item name="colorSurface">#FFFFFF</item>
        <item name="colorOnSurface">#2c3e50</item>
        <!-- Status bar -->
        <item name="android:statusBarColor">#1976D2</item>
        <item name="android:navigationBarColor">#1976D2</item>
        <!-- Action bar -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <!-- Corner radius for Material components -->
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <!-- Custom shape appearance for rounded corners -->
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Main Menu Button Styles -->
    <style name="MainMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="MainMenuButton.Primary">
        <item name="android:background">@drawable/button_primary</item>
    </style>

    <style name="MainMenuButton.Green">
        <item name="android:background">@drawable/button_green</item>
    </style>

    <style name="MainMenuButton.Orange">
        <item name="android:background">@drawable/button_orange</item>
    </style>

    <style name="MainMenuButton.Gray">
        <item name="android:background">@drawable/button_gray</item>
    </style>

    <style name="MainMenuButton.Purple">
        <item name="android:background">@drawable/button_purple</item>
    </style>

    <style name="MainMenuButton.Pink">
        <item name="android:background">@drawable/button_pink</item>
    </style>

    <!-- Side by side button style -->
    <style name="MainMenuButton.SideBySide">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginEnd">6dp</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Logout button style -->
    <style name="LogoutButton">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_logout</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Card style for sections -->
    <style name="CardSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/card_background</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <!-- Section title style -->
    <style name="SectionTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2c3e50</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Header style -->
    <style name="HeaderCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/header_card_background</item>
        <item name="android:padding">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:elevation">6dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <!-- Welcome text style -->
    <style name="WelcomeText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#7f8c8d</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- App title style -->
    <style name="AppTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2c3e50</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>