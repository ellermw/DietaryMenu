<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="colorAccent">#FF5722</item>

        <!-- Disable Material Components button tinting -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>

        <!-- Apply spinner styles globally -->
        <item name="android:spinnerStyle">@style/SpinnerStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropdownStyle</item>
    </style>

    <!-- Theme without action bar for activities with custom toolbar -->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Custom Material Button to disable tinting -->
    <style name="Widget.App.Button" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@null</item>
    </style>

    <!-- Spinner Style -->
    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <!-- Spinner Dropdown Style -->
    <style name="SpinnerDropdownStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Main Menu Button Base Style -->
    <style name="MainMenuButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:elevation">4dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <!-- Disable tinting -->
        <item name="android:backgroundTint">@null</item>
        <item name="backgroundTint">@null</item>
    </style>

    <!-- Blue Primary Button -->
    <style name="MainMenuButton.Primary" parent="MainMenuButton">
        <item name="android:background">@drawable/button_primary</item>
    </style>

    <!-- Green Button -->
    <style name="MainMenuButton.Green" parent="MainMenuButton">
        <item name="android:background">@drawable/button_green</item>
    </style>

    <!-- Orange Button -->
    <style name="MainMenuButton.Orange" parent="MainMenuButton">
        <item name="android:background">@drawable/button_orange</item>
    </style>

    <!-- Red Button -->
    <style name="MainMenuButton.Red" parent="MainMenuButton">
        <item name="android:background">@drawable/button_red</item>
    </style>

    <!-- Purple Button -->
    <style name="MainMenuButton.Purple" parent="MainMenuButton">
        <item name="android:background">@drawable/button_purple</item>
    </style>

    <!-- Pink Button -->
    <style name="MainMenuButton.Pink" parent="MainMenuButton">
        <item name="android:background">@drawable/button_pink</item>
    </style>

    <!-- Gray Button -->
    <style name="MainMenuButton.Gray" parent="MainMenuButton">
        <item name="android:background">@drawable/button_gray</item>
    </style>

    <!-- Logout Button Style -->
    <style name="LogoutButton" parent="MainMenuButton">
        <item name="android:background">@drawable/button_logout</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- Card Styles -->
    <style name="CardSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="HeaderCard" parent="CardSection">
        <item name="android:background">#2c3e50</item>
    </style>

    <!-- Dialog Styles -->
    <style name="DialogContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">24dp</item>
    </style>

    <style name="DialogLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="CustomEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Text Styles -->
    <style name="AppTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="WelcomeText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:alpha">0.9</item>
    </style>

    <style name="SectionTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2c3e50</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
</resources>