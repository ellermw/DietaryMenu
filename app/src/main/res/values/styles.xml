<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">#3498db</item>
        <item name="colorPrimaryDark">#2980b9</item>
        <item name="colorAccent">#27ae60</item>
        <!-- Customize your theme here -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- Header Card Style -->
    <style name="HeaderCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- App Title Style -->
    <style name="AppTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2c3e50</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <!-- Welcome Text Style -->
    <style name="WelcomeText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#7f8c8d</item>
    </style>

    <!-- Card Section Style -->
    <style name="CardSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:elevation">2dp</item>
    </style>

    <!-- Section Title Style -->
    <style name="SectionTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#34495e</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <!-- Main Menu Button Base Style -->
    <style name="MainMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Main Menu Button Primary Style -->
    <style name="MainMenuButton.Primary">
        <item name="android:background">#3498db</item>
    </style>

    <!-- Main Menu Button Green Style -->
    <style name="MainMenuButton.Green">
        <item name="android:background">#27ae60</item>
    </style>

    <!-- Main Menu Button Orange Style -->
    <style name="MainMenuButton.Orange">
        <item name="android:background">#f39c12</item>
    </style>

    <!-- Main Menu Button Red Style -->
    <style name="MainMenuButton.Red">
        <item name="android:background">#e74c3c</item>
    </style>

    <!-- Main Menu Button Purple Style -->
    <style name="MainMenuButton.Purple">
        <item name="android:background">#9b59b6</item>
    </style>

    <!-- Main Menu Button Teal Style -->
    <style name="MainMenuButton.Teal">
        <item name="android:background">#16a085</item>
    </style>

    <!-- Form Input Style -->
    <style name="FormInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@android:drawable/editbox_background</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- Label Style -->
    <style name="FormLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#7f8c8d</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <!-- Checkbox Style -->
    <style name="FormCheckbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
    </style>

    <!-- Action Button Style -->
    <style name="ActionButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Save Button Style -->
    <style name="ActionButton.Save">
        <item name="android:background">#27ae60</item>
    </style>

    <!-- Cancel Button Style -->
    <style name="ActionButton.Cancel">
        <item name="android:background">#95a5a6</item>
    </style>

    <!-- Delete Button Style -->
    <style name="ActionButton.Delete">
        <item name="android:background">#e74c3c</item>
    </style>

    <!-- List Item Title Style -->
    <style name="ListItemTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#2c3e50</item>
    </style>

    <!-- List Item Subtitle Style -->
    <style name="ListItemSubtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#7f8c8d</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <!-- Status Text Style -->
    <style name="StatusText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#3498db</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <!-- Empty State Text Style -->
    <style name="EmptyStateText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#7f8c8d</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Toolbar Title Style -->
    <style name="ToolbarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Dialog Style -->
    <style name="AppDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">#3498db</item>
        <item name="colorPrimaryDark">#2980b9</item>
        <item name="colorAccent">#27ae60</item>
    </style>

    <!-- Spinner Style -->
    <style name="SpinnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@android:drawable/btn_dropdown</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- Card View Style -->
    <style name="CardViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
    </style>

</resources>