<?xml version="1.0" encoding="utf-8"?>
<!-- app/src/main/res/values/colors.xml -->
<resources>
    <!-- Primary Colors - Based on McAlester Regional Health Center Logo -->
    <color name="primary_blue">#1e3a8a</color>          <!-- Deep Blue -->
    <color name="primary_teal">#0891b2</color>           <!-- Teal Blue -->
    <color name="light_blue">#3b82f6</color>             <!-- Light Blue -->
    <color name="hospital_blue">#1e40af</color>          <!-- Hospital Blue -->
    
    <!-- Secondary Colors -->
    <color name="background_light">#f5f7fa</color>       <!-- Light Gray Background -->
    <color name="background_white">#ffffff</color>       <!-- White Background -->
    <color name="text_primary">#1e3a8a</color>          <!-- Primary Text -->
    <color name="text_secondary">#64748b</color>         <!-- Secondary Text -->
    <color name="text_tertiary">#94a3b8</color>         <!-- Tertiary Text -->
    <color name="text_dark">#374151</color>             <!-- Dark Text -->
    
    <!-- Status Colors -->
    <color name="success_green">#16a34a</color>         <!-- Success Green -->
    <color name="warning_orange">#dc2626</color>        <!-- Warning Orange -->
    <color name="error_red">#dc2626</color>             <!-- Error Red -->
    <color name="info_blue">#3b82f6</color>             <!-- Info Blue -->
    <color name="pending_amber">#f59e0b</color>         <!-- Pending Amber -->
    
    <!-- Button Colors -->
    <color name="button_primary">#1e3a8a</color>        <!-- Primary Button -->
    <color name="button_secondary">#64748b</color>      <!-- Secondary Button -->
    <color name="button_success">#16a34a</color>        <!-- Success Button -->
    <color name="button_warning">#dc2626</color>        <!-- Warning Button -->
    <color name="button_danger">#dc2626</color>         <!-- Danger Button -->
    <color name="button_info">#0891b2</color>           <!-- Info Button -->
    
    <!-- Divider and Border Colors -->
    <color name="divider_light">#e5e7eb</color>         <!-- Light Divider -->
    <color name="divider_medium">#d1d5db</color>        <!-- Medium Divider -->
    <color name="border_light">#e5e7eb</color>          <!-- Light Border -->
