<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light"
        tools:targetApi="31">

        <!-- Login Activity - Entry point -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Menu Activity - Primary navigation hub -->
        <activity
            android:name=".MainMenuActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Meal Planning Activity - Core meal planning functionality -->
        <activity
            android:name=".MealPlanningActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustResize" />

        <!-- Pending Orders Activity - View pending meal orders -->
        <activity
            android:name=".PendingOrdersActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Retired Orders Activity - View completed orders -->
        <activity
            android:name=".RetiredOrdersActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Account Management Activity - User account settings -->
        <activity
            android:name=".AccountManagementActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustResize" />

        <!-- Password Change Activity -->
        <activity
            android:name=".PasswordChangeActivity"
            android:exported="false"
            android:parentActivityName=".LoginActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustResize" />

        <!-- Patient Info Menu Activity - Patient information hub -->
        <activity
            android:name=".PatientInfoMenuActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- New Patient Activity - Add new patients -->
        <activity
            android:name=".NewPatientActivity"
            android:exported="false"
            android:parentActivityName=".PatientInfoMenuActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustResize" />

        <!-- Existing Patient Activity - View existing patients -->
        <activity
            android:name=".ExistingPatientActivity"
            android:exported="false"
            android:parentActivityName=".PatientInfoMenuActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Patient Info Activity - Manage patient information -->
        <activity
            android:name=".PatientInfoActivity"
            android:exported="false"
            android:parentActivityName=".PatientInfoMenuActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustResize" />

        <!-- Patient Detail Activity - Detailed patient view -->
        <activity
            android:name=".PatientDetailActivity"
            android:exported="false"
            android:parentActivityName=".ExistingPatientActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Admin Menu Activity - Admin functions -->
        <activity
            android:name=".AdminMenuActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Admin Activity - Comprehensive admin management -->
        <activity
            android:name=".AdminActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- User Management Activity - Manage users (Admin only) -->
        <activity
            android:name=".UserManagementActivity"
            android:exported="false"
            android:parentActivityName=".AdminActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Item Management Activity - Manage food items (Admin only) -->
        <activity
            android:name=".ItemManagementActivity"
            android:exported="false"
            android:parentActivityName=".AdminActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Default Menu Management Activity - Manage default menus (Admin only) -->
        <activity
            android:name=".DefaultMenuManagementActivity"
            android:exported="false"
            android:parentActivityName=".AdminActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustResize" />

        <!-- View Orders Activity - View orders by date -->
        <activity
            android:name=".ViewOrdersActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Main Activity - Original meal planning (keep for compatibility) -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:parentActivityName=".MealPlanningActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustResize" />

    </application>

</manifest>
