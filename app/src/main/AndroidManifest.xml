<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.hospital.dietary">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:targetApi="31">

        <!-- Login Activity - Entry point -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Activities -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".MainMenuActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />

        <!-- Patient Management Activities -->
        <activity
            android:name=".PatientInfoMenuActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".PatientInfoActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".PatientActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".ExistingPatientActivity"
            android:exported="false"
            android:parentActivityName=".PatientInfoMenuActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />

        <!-- New Patient Activity - Uses its own Toolbar -->
        <activity
            android:name=".NewPatientActivity"
            android:exported="false"
            android:parentActivityName=".PatientInfoMenuActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize" />

        <!-- Existing Patients Activity - Uses its own Toolbar -->
        <activity
            android:name=".ExistingPatientsActivity"
            android:exported="false"
            android:parentActivityName=".PatientInfoMenuActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".PatientDetailActivity"
            android:exported="false"
            android:parentActivityName=".ExistingPatientsActivity"
            android:theme="@style/AppTheme" />

        <!-- Edit Patient Activity - Uses its own Toolbar -->
        <activity
            android:name=".EditPatientActivity"
            android:exported="false"
            android:parentActivityName=".PatientDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Meal Planning Activity - Uses its own Toolbar -->
        <activity
            android:name=".MealPlanningActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- Order Management Activities -->
        <activity
            android:name=".OrderManagementActivity"
            android:exported="false"
            android:parentActivityName=".PatientDetailActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name=".PendingOrdersActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme" />

        <!-- Finished Orders Activity - Uses its own Toolbar -->
        <activity
            android:name=".FinishedOrdersActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".RetiredOrdersActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme" />

        <!-- Management Activities -->
        <activity
            android:name=".CategoryManagementActivity"
            android:exported="false"
            android:parentActivityName=".ItemManagementActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".DefaultMenuManagementActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".DocumentsActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".ItemManagementActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".UserManagementActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".AccountManagementActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".AdminActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme" />

    </application>

</manifest>