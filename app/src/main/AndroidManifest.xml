<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hospital.dietary">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.DietaryMenu">

        <!-- Login Activity - Entry Point -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Menu Activity - New main menu with options -->
        <activity
            android:name=".MainMenuActivity"
            android:exported="false"
            android:parentActivityName=".LoginActivity" />

        <!-- Patient Information Activity -->
        <activity
            android:name=".PatientInfoActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity" />

        <!-- Pending Orders Activity -->
        <activity
            android:name=".PendingOrdersActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity" />

        <!-- Finished Orders Activity -->
        <activity
            android:name=".FinishedOrdersActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity" />

        <!-- Meal Planning Activity -->
        <activity
            android:name=".MealPlanningActivity"
            android:exported="false"
            android:parentActivityName=".PendingOrdersActivity" />

        <!-- Admin Activity - For user and item management -->
        <activity
            android:name=".AdminActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity" />

        <!-- Original MainActivity - Keep for backward compatibility -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity" />

        <!-- View Orders Activity - Legacy -->
        <activity
            android:name=".ViewOrdersActivity"
            android:exported="false"
            android:parentActivityName=".MainActivity" />

    </application>

</manifest>