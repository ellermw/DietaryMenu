<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light"
        tools:targetApi="31">

        <!-- Login Activity - Entry point -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Menu Activity - Primary navigation hub -->
        <activity
            android:name=".MainMenuActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Documents Activity - Document management -->
        <activity
            android:name=".DocumentsActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Meal Planning Activity - Core meal planning functionality -->
        <activity
            android:name=".MealPlanningActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustResize" />

        <!-- Pending Orders Activity - Manage pending orders -->
        <activity
            android:name=".PendingOrdersActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustResize" />

        <!-- Retired Orders Activity - View retired orders -->
        <activity
            android:name=".RetiredOrdersActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Patient Info Menu Activity - Patient information hub -->
        <activity
            android:name=".PatientInfoMenuActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Add Patient Activity - Add new patients -->
        <activity
            android:name=".AddPatientActivity"
            android:exported="false"
            android:parentActivityName=".PatientInfoMenuActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustResize" />

        <!-- New Patient Activity - Add new patients -->
        <activity
            android:name=".NewPatientActivity"
            android:exported="false"
            android:parentActivityName=".PatientInfoMenuActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustResize" />

        <!-- Patient List Activity - View all patients -->
        <activity
            android:name=".PatientListActivity"
            android:exported="false"
            android:parentActivityName=".PatientInfoMenuActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Existing Patient Activity - View existing patients -->
        <activity
            android:name=".ExistingPatientActivity"
            android:exported="false"
            android:parentActivityName=".PatientInfoMenuActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Patient Detail Activity - View/edit patient details -->
        <activity
            android:name=".PatientDetailActivity"
            android:exported="false"
            android:parentActivityName=".PatientListActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustResize" />

        <!-- Edit Patient Activity - Edit patient information -->
        <activity
            android:name=".EditPatientActivity"
            android:exported="false"
            android:parentActivityName=".PatientDetailActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustResize" />

        <!-- User Management Activity - Manage users -->
        <activity
            android:name=".UserManagementActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Item Management Activity - Manage food items -->
        <activity
            android:name=".ItemManagementActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Category Management Activity - Manage item categories -->
        <activity
            android:name=".CategoryManagementActivity"
            android:exported="false"
            android:parentActivityName=".ItemManagementActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Default Menu Management Activity - Manage default menus -->
        <activity
            android:name=".DefaultMenuManagementActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Order Management Activity - Manage orders -->
        <activity
            android:name=".OrderManagementActivity"
            android:exported="false"
            android:parentActivityName=".PatientDetailActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:windowSoftInputMode="adjustResize" />

        <!-- Account Management Activity - User account settings -->
        <activity
            android:name=".AccountManagementActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light" />

        <!-- Admin Activity - Administrative functions -->
        <activity
            android:name=".AdminActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/Theme.AppCompat.Light" />

    </application>

</manifest>