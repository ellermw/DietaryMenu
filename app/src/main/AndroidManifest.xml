<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hospital.dietary">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.DietaryMenu"
        android:supportsRtl="true"
        android:hardwareAccelerated="true">

        <!-- Login Activity - Entry Point -->
        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize"
            android:importantForAutofill="no">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main Menu Activity - Updated main menu with admin options -->
        <activity
            android:name=".MainMenuActivity"
            android:exported="false"
            android:parentActivityName=".LoginActivity"
            android:importantForAutofill="no" />

        <!-- FEATURE: Account Management Activity - New password change feature -->
        <activity
            android:name=".AccountManagementActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:importantForAutofill="no"
            android:windowSoftInputMode="adjustResize" />

        <!-- Patient Information Menu Activity - New submenu -->
        <activity
            android:name=".PatientInfoMenuActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:importantForAutofill="no" />

        <!-- New Patient Activity - Create new patient -->
        <activity
            android:name=".NewPatientActivity"
            android:exported="false"
            android:parentActivityName=".PatientInfoMenuActivity"
            android:importantForAutofill="no"
            android:windowSoftInputMode="adjustResize" />

        <!-- Existing Patient Activity - View existing patients -->
        <activity
            android:name=".ExistingPatientActivity"
            android:exported="false"
            android:parentActivityName=".PatientInfoMenuActivity"
            android:importantForAutofill="no" />

        <!-- Patient Detail Activity - FIXED: View patient details -->
        <activity
            android:name=".PatientDetailActivity"
            android:exported="false"
            android:parentActivityName=".ExistingPatientActivity"
            android:importantForAutofill="no"
            android:windowSoftInputMode="adjustResize" />

        <!-- Patient Info Activity - Manage patients -->
        <activity
            android:name=".PatientInfoActivity"
            android:exported="false"
            android:parentActivityName=".PatientInfoMenuActivity"
            android:importantForAutofill="no"
            android:windowSoftInputMode="adjustResize" />

        <!-- Meal Planning Activity - Plan patient meals -->
        <activity
            android:name=".MealPlanningActivity"
            android:exported="false"
            android:parentActivityName=".PatientDetailActivity"
            android:importantForAutofill="no"
            android:windowSoftInputMode="adjustResize" />

        <!-- Pending Orders Activity - View pending orders -->
        <activity
            android:name=".PendingOrdersActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:importantForAutofill="no" />

        <!-- Retired Orders Activity - View completed orders -->
        <activity
            android:name=".RetiredOrdersActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:importantForAutofill="no" />

        <!-- Admin Activity - FIXED: User and item management -->
        <activity
            android:name=".AdminActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:importantForAutofill="no"
            android:windowSoftInputMode="adjustResize" />

        <!-- Main Activity - Original meal planning (keep for compatibility) -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:parentActivityName=".MealPlanningActivity"
            android:importantForAutofill="no"
            android:windowSoftInputMode="adjustResize" />

    </application>

</manifest>