<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- MainActivity - Entry point (redirects to LoginActivity) -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LoginActivity - Login Screen -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />

        <!-- Main Menu Activity -->
        <activity
            android:name=".MainMenuActivity"
            android:exported="false"
            android:theme="@style/AppTheme" />

        <!-- Patient Info Menu Activity -->
        <activity
            android:name=".PatientInfoMenuActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme" />

        <!-- Existing Patient Activity - List of patients -->
        <activity
            android:name=".ExistingPatientActivity"
            android:exported="false"
            android:parentActivityName=".PatientInfoMenuActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />

        <!-- New Patient Activity - Add new patients -->
        <activity
            android:name=".NewPatientActivity"
            android:exported="false"
            android:parentActivityName=".PatientInfoMenuActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize" />

        <!-- Edit Patient Activity -->
        <activity
            android:name=".EditPatientActivity"
            android:exported="false"
            android:parentActivityName=".PatientInfoMenuActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize" />

        <!-- Patient Detail Activity - Individual patient details -->
        <activity
            android:name=".PatientDetailActivity"
            android:exported="false"
            android:parentActivityName=".ExistingPatientActivity"
            android:theme="@style/AppTheme" />

        <!-- Patient Info Activity - Patient information management -->
        <activity
            android:name=".PatientInfoActivity"
            android:exported="false"
            android:parentActivityName=".PatientInfoMenuActivity"
            android:theme="@style/AppTheme" />

        <!-- Meal Planning Activity -->
        <activity
            android:name=".MealPlanningActivity"
            android:exported="false"
            android:parentActivityName=".PatientInfoMenuActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />

        <!-- Pending Orders Activity -->
        <activity
            android:name=".PendingOrdersActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme" />

        <!-- Finished Orders Activity -->
        <activity
            android:name=".FinishedOrdersActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <!-- User Management Activity - Manage users (Admin only) -->
        <activity
            android:name=".UserManagementActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme" />

        <!-- Item Management Activity - Manage food items (Admin only) -->
        <activity
            android:name=".ItemManagementActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme" />

        <!-- Category Management Activity - Manage item categories -->
        <activity
            android:name=".CategoryManagementActivity"
            android:exported="false"
            android:parentActivityName=".ItemManagementActivity"
            android:theme="@style/AppTheme" />

        <!-- Default Menu Management Activity - Manage default menus -->
        <activity
            android:name=".DefaultMenuManagementActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme" />

        <!-- Order Management Activity - Manage orders -->
        <activity
            android:name=".OrderManagementActivity"
            android:exported="false"
            android:parentActivityName=".PatientDetailActivity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize" />

        <!-- Account Management Activity - User account settings -->
        <activity
            android:name=".AccountManagementActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme" />

        <!-- Admin Activity - Administrative functions -->
        <activity
            android:name=".AdminActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme" />

        <!-- Documents Activity -->
        <activity
            android:name=".DocumentsActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme" />

        <!-- Production Sheets Activity -->
        <activity
            android:name=".ProductionSheetsActivity"
            android:exported="false"
            android:parentActivityName=".DocumentsActivity"
            android:theme="@style/AppTheme" />

        <!-- Stock Sheets Activity -->
        <activity
            android:name=".StockSheetsActivity"
            android:exported="false"
            android:parentActivityName=".DocumentsActivity"
            android:theme="@style/AppTheme" />

        <!-- Retired Orders Activity -->
        <activity
            android:name=".RetiredOrdersActivity"
            android:exported="false"
            android:parentActivityName=".MainMenuActivity"
            android:theme="@style/AppTheme" />

    </application>

</manifest>