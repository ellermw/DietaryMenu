<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Drink Selection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Drink:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#2c3e50"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/drinkSpinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="16dp" />

    <!-- ML Information -->
    <TextView
        android:id="@+id/mlInfoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ML per unit: 240"
        android:textSize="14sp"
        android:textColor="#7f8c8d"
        android:layout_marginBottom="16dp"
        android:visibility="gone" />

    <!-- Quantity Input -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantity:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#2c3e50"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/quantityInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter quantity (e.g., 1, 2, 3)"
        android:inputType="number"
        android:padding="12dp"
        android:background="@android:drawable/edit_text"
        android:layout_marginBottom="16dp" />

    <!-- Fluid Restriction Info -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ’§ Consider fluid restrictions when adding drinks"
        android:textSize="12sp"
        android:textColor="#e67e22"
        android:background="#fef9e7"
        android:padding="8dp"
        android:layout_marginTop="8dp" />

</LinearLayout>