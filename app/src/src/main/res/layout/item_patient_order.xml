<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/orderDateText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="📅 Order Date"
            android:textSize="14sp"
            android:textColor="#1f2937" />

        <TextView
            android:id="@+id/orderStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📋 STATUS"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/dietTypeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🍽️ Diet Type"
        android:textSize="14sp"
        android:textColor="#6b7280"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/breakfastItemsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🌅 Breakfast: Items"
        android:textSize="13sp"
        android:textColor="#374151"
        android:layout_marginBottom="4dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/lunchItemsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="☀️ Lunch: Items"
        android:textSize="13sp"
        android:textColor="#374151"
        android:layout_marginBottom="4dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/dinnerItemsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🌙 Dinner: Items"
        android:textSize="13sp"
        android:textColor="#374151"
        android:visibility="gone" />

</LinearLayout>