<?xml version="1.0" encoding="utf-8"?>
<!-- app/src/main/res/layout/item_saved_menu.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#f8fafc"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:elevation="1dp">

    <!-- Menu Date -->
    <TextView
        android:id="@+id/menuDateText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu for 2025-01-15"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#1e3a8a"
        android:layout_marginBottom="8dp" />

    <!-- Breakfast Items -->
    <TextView
        android:id="@+id/breakfastItemsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Breakfast: Items"
        android:textSize="13sp"
        android:textColor="#374151"
        android:layout_marginBottom="4dp"
        android:visibility="gone" />

    <!-- Lunch Items -->
    <TextView
        android:id="@+id/lunchItemsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lunch: Items"
        android:textSize="13sp"
        android:textColor="#374151"
        android:layout_marginBottom="4dp"
        android:visibility="gone" />

    <!-- Dinner Items -->
    <TextView
        android:id="@+id/dinnerItemsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dinner: Items"
        android:textSize="13sp"
        android:textColor="#374151"
        android:visibility="gone" />

</LinearLayout>