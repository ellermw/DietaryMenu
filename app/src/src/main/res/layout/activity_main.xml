<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#f5f5f5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dietary Menu Order"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Patient Information Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PATIENT INFORMATION"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#34495e"
            android:background="#ecf0f1"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- FIXED: Split Patient Name Fields -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Patient Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <EditText
                android:id="@+id/patientFirstNameInput"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="First Name"
                android:background="@android:drawable/edit_text"
                android:padding="12dp"
                android:layout_marginEnd="8dp"
                android:inputType="textPersonName|textCapWords" />

            <EditText
                android:id="@+id/patientLastNameInput"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:hint="Last Name"
                android:background="@android:drawable/edit_text"
                android:padding="12dp"
                android:layout_marginStart="8dp"
                android:inputType="textPersonName|textCapWords" />

        </LinearLayout>

        <!-- Wing Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wing"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/wingSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp" />

        <!-- Room Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Room"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/roomSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp" />

        <!-- Diet Type -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Diet Type"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/dietSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp" />

        <!-- Fluid Restriction -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fluid Restriction"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/fluidRestrictionSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="16dp" />

        <!-- Texture Modifications -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texture Modifications"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <CheckBox
                android:id="@+id/mechanicalGroundCB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mechanical Ground"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/mechanicalChoppedCB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mechanical Chopped"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/biteSizeCB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bite Size"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/breadOKCB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bread OK"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Breakfast Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BREAKFAST"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#34495e"
            android:background="#ecf0f1"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Breakfast Items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Cold Cereal -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cold Cereal"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />
            <Spinner
                android:id="@+id/breakfastColdCereal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="8dp" />

            <!-- Hot Cereal -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hot Cereal"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />
            <Spinner
                android:id="@+id/breakfastHotCereal"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="8dp" />

            <!-- Bread -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bread"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />
            <Spinner
                android:id="@+id/breakfastBread"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="8dp" />

            <!-- Muffin -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Muffin"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />
            <Spinner
                android:id="@+id/breakfastMuffin"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="8dp" />

            <!-- Main Item -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Main Item"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />
            <Spinner
                android:id="@+id/breakfastMain"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="8dp" />

            <!-- Fruit -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fruit"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />
            <Spinner
                android:id="@+id/breakfastFruit"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <!-- Breakfast Beverages -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Breakfast Beverages"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#2c3e50"
            android:layout_marginBottom="8dp" />

        <!-- Breakfast Juices -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Juices"
                android:textSize="14sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/addBreakfastJuiceButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="+ Add Juice"
                android:textSize="12sp"
                android:background="#3498db"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/breakfastJuicesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp" />

        <!-- Breakfast Drinks -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Other Drinks"
                android:textSize="14sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/addBreakfastDrinkButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="+ Add Drink"
                android:textSize="12sp"
                android:background="#2ecc71"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/breakfastDrinksContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp" />

        <!-- Breakfast Fluid Display -->
        <TextView
            android:id="@+id/breakfastFluidDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fluid: 0ml"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#e74c3c"
            android:gravity="end"
            android:layout_marginBottom="16dp" />

        <!-- Lunch Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LUNCH"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#34495e"
            android:background="#ecf0f1"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Lunch Items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Protein -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Protein/Entrée"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />
            <Spinner
                android:id="@+id/lunchProtein"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="8dp" />

            <!-- Starch -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Starch"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />
            <Spinner
                android:id="@+id/lunchStarch"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="8dp" />

            <!-- Vegetable -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vegetable"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />
            <Spinner
                android:id="@+id/lunchVegetable"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="8dp" />

            <!-- Dessert -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dessert"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />
            <Spinner
                android:id="@+id/lunchDessert"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <!-- Lunch Beverages -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Lunch Drinks"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2c3e50" />
            <Button
                android:id="@+id/addLunchDrinkButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="+ Add Drink"
                android:textSize="12sp"
                android:background="#2ecc71"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lunchDrinksContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp" />

        <!-- Lunch Fluid Display -->
        <TextView
            android:id="@+id/lunchFluidDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fluid: 0ml"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#e74c3c"
            android:gravity="end"
            android:layout_marginBottom="16dp" />

        <!-- Dinner Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DINNER"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#34495e"
            android:background="#ecf0f1"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Dinner Items -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Protein -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Protein/Entrée"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />
            <Spinner
                android:id="@+id/dinnerProtein"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="8dp" />

            <!-- Starch -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Starch"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />
            <Spinner
                android:id="@+id/dinnerStarch"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="8dp" />

            <!-- Vegetable -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vegetable"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />
            <Spinner
                android:id="@+id/dinnerVegetable"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="8dp" />

            <!-- Dessert -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dessert"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />
            <Spinner
                android:id="@+id/dinnerDessert"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@android:drawable/edit_text"
                android:layout_marginBottom="8dp" />

        </LinearLayout>

        <!-- Dinner Beverages -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dinner Drinks"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2c3e50" />
            <Button
                android:id="@+id/addDinnerDrinkButton"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="+ Add Drink"
                android:textSize="12sp"
                android:background="#2ecc71"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dinnerDrinksContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp" />

        <!-- Dinner Fluid Display -->
        <TextView
            android:id="@+id/dinnerFluidDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fluid: 0ml"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#e74c3c"
            android:gravity="end"
            android:layout_marginBottom="24dp" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/clearFormButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Clear Form"
                android:textSize="16sp"
                android:background="#95a5a6"
                android:textColor="@android:color/white"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/submitOrderButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Submit Order"
                android:textSize="16sp"
                android:background="#27ae60"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <Button
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="← Back to Main Menu"
            android:textSize="16sp"
            android:background="#34495e"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>