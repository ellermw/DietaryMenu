<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DialogContent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Header Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You must change your password before continuing."
        android:textSize="16sp"
        android:textColor="#2c3e50"
        android:layout_marginBottom="24dp"
        android:gravity="center" />

    <!-- New Password Field -->
    <TextView
        style="@style/DialogLabel"
        android:text="New Password *" />

    <EditText
        android:id="@+id/newPasswordEditText"
        style="@style/CustomEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter new password (min 6 characters)"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp"
        android:textColor="#2c3e50"
        android:textColorHint="#7f8c8d" />

    <!-- Confirm Password Field -->
    <TextView
        style="@style/DialogLabel"
        android:text="Confirm Password *" />

    <EditText
        android:id="@+id/confirmPasswordEditText"
        style="@style/CustomEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Confirm new password"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp"
        android:textColor="#2c3e50"
        android:textColorHint="#7f8c8d" />

    <!-- Show Password Checkbox -->
    <CheckBox
        android:id="@+id/showNewPasswordCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show passwords"
        android:textSize="14sp"
        android:textColor="#2c3e50"
        android:layout_marginBottom="8dp" />

    <!-- Password Requirements -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Password must be at least 6 characters"
        android:textSize="12sp"
        android:textColor="#7f8c8d"
        android:gravity="center" />

</LinearLayout>